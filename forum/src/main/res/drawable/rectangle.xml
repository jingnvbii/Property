    <solid android:color="@color/white"/>
    <!--边框-->
    <stroke
        android:width="1dp"
        android:color="@color/red_bg" />
    <!--圆角-->
    <corners
        android:radius="1dp"
        android:bottomLeftRadius="2dp"
        android:bottomRightRadius="2dp"
        android:topLeftRadius="2dp"
        android:topRightRadius="2dp" >
    </corners>
    <!-- 边距 -->
    <padding
        android:bottom="1dp"
        android:left="3dp"
        android:right="3dp"
        android:top="1dp" />

</shape> 