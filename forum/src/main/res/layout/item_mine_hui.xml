<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@mipmap/juan_hui"
        android:layout_marginLeft="@dimen/margin_left_and_right"
        android:layout_marginRight="@dimen/margin_left_and_right"
        android:layout_marginTop="@dimen/margin_left_and_right">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立\n即\n使\n用"
        android:layout_marginRight="18dp"
        android:textColor="@color/white"
        android:id="@+id/textView39"
        android:textSize="@dimen/text_size_basic"
        android:layout_alignParentRight="true"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥20.00"
        android:textColor="@color/red_juan"
        android:layout_centerVertical="true"
        android:textSize="@dimen/text_size_more"
        android:id="@+id/tv_money"
        android:layout_marginLeft="@dimen/margin_left_and_right"
        />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/red_juan"
            android:id="@+id/textView40"
            android:layout_marginTop="@dimen/margin_left_and_right"
            android:layout_marginLeft="@dimen/margin_left_and_right"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_money"
            android:layout_toEndOf="@+id/tv_money" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/textView40"
            android:layout_toRightOf="@+id/textView40"
            android:layout_marginLeft="@dimen/margin_left_and_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="@string/man"
                android:textColor="@color/red_juan"
                android:gravity="center_vertical"
                android:id="@+id/tv_man" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:textColor="@color/red_juan"
                android:text="@string/juan_time"
                android:gravity="center_vertical"
                android:id="@+id/tv_time" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:textColor="@color/red_juan"
                android:text="@string/xian_zhi"
                android:gravity="center_vertical"
                android:id="@+id/tv_zhi"  />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
