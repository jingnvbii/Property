<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_packet_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/red_packet" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:inputType="phone"
                android:textSize="@dimen/text_size_basic"
                android:ems="10"
                android:hint="@string/input_ni_phone"
                android:gravity="center"
                android:id="@+id/et_phone"
                android:layout_marginTop="365dp"
                android:background="@drawable/ed_white"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_get"
                android:layout_below="@+id/et_phone"
                android:layout_marginTop="@dimen/margin_left_and_right"
                android:src="@mipmap/get"
                android:layout_centerHorizontal="true"
                />

            <RelativeLayout
                android:id="@+id/rl_juan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="330dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/iv_gray"
                    android:src="@mipmap/bg_gray"
                     />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_center"
                android:layout_below="@+id/pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_left_and_right"
                android:layout_marginBottom="30dp"
                android:background="@color/red_text_bg"
                android:layout_marginRight="@dimen/margin_left_and_right"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activity"
                    android:textSize="@dimen/text_size_more"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"
                    android:id="@+id/textView33"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/textView34"
                    android:background="@color/white"
                    android:layout_marginBottom="@dimen/margin_left_and_right"
                    android:layout_marginRight="@dimen/margin_left_and_right"
                    android:layout_alignBottom="@+id/textView33"
                    android:layout_toLeftOf="@+id/textView33"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/textView3"
                    android:background="@color/white"
                    android:layout_marginBottom="@dimen/margin_left_and_right"
                    android:layout_marginLeft="@dimen/margin_left_and_right"
                    android:layout_alignBottom="@+id/textView33"
                    android:layout_toRightOf="@+id/textView33"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_basic"
                    android:id="@+id/textView35"
                    android:layout_below="@+id/textView33"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="@dimen/margin_left_and_right"
                    android:layout_marginRight="@dimen/margin_left_and_right"
                    android:layout_marginTop="@dimen/margin_left_and_right" />

                <!--朋友领取情况-->
                <RelativeLayout
                    android:id="@+id/rl_friend"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/textView35"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/see_friend"
                        android:id="@+id/textView36"
                        android:textSize="@dimen/text_size_more"
                        android:textColor="@color/white"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white"
                        android:layout_marginBottom="@dimen/margin_left_and_right"
                        android:layout_marginRight="@dimen/margin_left_and_right"
                        android:layout_alignBottom="@+id/textView36"
                        android:layout_toLeftOf="@+id/textView36"
                        android:id="@+id/textView37" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white"
                        android:layout_marginBottom="@dimen/margin_left_and_right"
                        android:layout_marginLeft="@dimen/margin_left_and_right"
                        android:layout_alignBottom="@+id/textView36"
                        android:layout_toRightOf="@+id/textView36"
                        />

                    <ListView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/lv_friend"
                        android:layout_below="@+id/textView37"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
