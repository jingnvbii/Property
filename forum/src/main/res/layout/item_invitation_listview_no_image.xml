<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="全国了立下了发送的方式的减肥 是对方就看到啥"
        android:textColor="@color/text_black"
        android:layout_marginRight="@dimen/margin_left_and_right"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:layout_alignTop="@+id/iv_title_photo"
        android:layout_toRightOf="@+id/iv_title_photo"
        android:layout_toEndOf="@+id/iv_title_photo"
        android:id="@+id/tv_titile0" />




    <ImageView
        android:layout_below="@+id/tv_titile0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/baby"
        android:id="@+id/imageView0"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignLeft="@+id/tv_titile0"
        android:layout_alignStart="@+id/tv_titile0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:text="给自己一片天"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/tv_titile0"
        android:layout_alignBottom="@+id/iv_title_photo"
        android:layout_toRightOf="@+id/imageView0"
        android:id="@+id/tv_name0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一分钟前"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_titile0"
        android:layout_marginBottom="10dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@mipmap/clock_small"
        android:layout_toLeftOf="@+id/tv_numbers0"
        android:layout_alignBottom="@+id/iv_title_photo"
        android:layout_marginRight="20dp"
        android:id="@+id/tv_time0" />

    <TextView
        android:id="@+id/tv_numbers0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@mipmap/number_small"
        android:drawablePadding="5dp"
        android:layout_below="@+id/tv_titile0"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/iv_title_photo"


        />



</RelativeLayout>