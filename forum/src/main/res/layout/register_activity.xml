<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/main_bg"
    android:layout_height="match_parent">
    <include
        layout="@layout/toolbar_common_red"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        />

    <LinearLayout
        android:layout_marginTop="@dimen/margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/line_gray" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:hint="@string/user_name_hint"
            android:background="@null"
            android:paddingLeft="@dimen/margin_left_and_right"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_basic"
            android:gravity="center_vertical"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/line_gray" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_auth_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:hint="@string/auth_code_hint"
            android:background="@null"
            android:paddingLeft="@dimen/margin_left_and_right"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_basic"
            android:gravity="center_vertical"
            />

          <TextView
              android:id="@+id/tv_auth_code"
              android:layout_width="80dp"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:gravity="center"
              android:textColor="@color/text_red"
              android:layout_marginRight="10dp"
              android:background="@drawable/red_border_shape"
              android:text="获取验证码"/>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/line_gray" />

        <EditText
            android:id="@+id/et_pass_word"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:hint="密码6-10位数字和字母组成"
            android:background="@null"
            android:paddingLeft="@dimen/margin_left_and_right"
            android:inputType="numberPassword"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_basic"
            android:gravity="center_vertical"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/line_gray" />

        <EditText
            android:id="@+id/et_verify"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height"
            android:hint="再次确认密码"
            android:background="@null"
            android:inputType="numberPassword"
            android:paddingLeft="@dimen/margin_left_and_right"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_basic"
            android:gravity="center_vertical"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/line_gray" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:textColor="@color/text_white"
        android:background="@drawable/btn_red_selector"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="@dimen/text_size_medium"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="@color/text_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读并同意"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_blue"
            android:text="《用户使用协议》"/>


    </LinearLayout>

</LinearLayout>