<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/main_bg"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <com.ctrl.forum.customview.RoundImageView
            android:id="@+id/title_image"
            android:layout_width="50dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/margin_left_and_right"
            android:layout_height="50dp"
            android:src="@mipmap/round_img"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_black"/>


                <ImageView
                    android:id="@+id/iv_levlel"
                    android:layout_toRightOf="@id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    />

                <TextView
                    android:id="@+id/tv_release_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_gray"
                    android:layout_marginRight="@dimen/margin_left_and_right"
                    />
            </RelativeLayout>
            <View
                android:layout_below="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/title_image"
                android:layout_marginLeft="10dp"
                android:layout_height="2px"
                android:background="@color/line_gray"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_gray"
                    />
                <TextView
                    android:id="@+id/tv_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="删除本帖"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:paddingRight="10dp"
                    android:textColor="@color/text_red"/>



            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray" />

    <TextView
        android:id="@+id/tv_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/margin_left_and_right"
         />


    <LinearLayout
        android:id="@+id/ll_tel"
        android:layout_width="match_parent"
        android:background="@drawable/edit_white_shap"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_tel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_black"
            android:padding="10dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@mipmap/tel"/>
    </LinearLayout>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电话按钮"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="14sp"
        android:drawableLeft="@mipmap/tel_white"
        android:drawableRight="@mipmap/jiantou_right_white"
        android:textColor="@color/text_white"
        android:background="@drawable/tv_blue_bg_invitation"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="网址按钮"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:drawableLeft="@mipmap/lianjie_white"
        android:drawableRight="@mipmap/jiantou_right_white"
        android:textColor="@color/text_white"
        android:background="@drawable/tv_yellow_bg_invitation"
        />

     <com.baidu.mapapi.map.MapView
         android:id="@+id/mapview_invitation"
         android:layout_width="match_parent"
         android:layout_margin="10dp"
         android:layout_height="200dp">

     </com.baidu.mapapi.map.MapView>



     <View
         android:layout_width="match_parent"
         android:layout_height="1px"
         android:background="@color/line_gray"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:textColor="@color/text_black"
                android:layout_marginLeft="@dimen/margin_left_and_right"
                android:text="相关信息"
                />

        </LinearLayout>


     <com.ctrl.forum.customview.ListViewForScrollView
         android:id="@+id/lv_relevance_invitation"
         android:layout_width="match_parent"
         android:layout_height="match_parent">
     </com.ctrl.forum.customview.ListViewForScrollView>

