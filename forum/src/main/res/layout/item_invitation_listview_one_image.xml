<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_title_photo1"
        android:scaleType="fitXY"
        android:layout_width="60dp"
        android:layout_height="70dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        android:layout_marginLeft="5dp"
        android:maxLines="2"
        android:layout_alignTop="@+id/iv_title_photo1"
        android:layout_toRightOf="@+id/iv_title_photo1"
        android:layout_toEndOf="@+id/iv_title_photo1"
        android:id="@+id/tv_titile1" />


    <com.ctrl.forum.customview.RoundImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitXY"
        android:id="@+id/imageView1"
        android:layout_alignBottom="@+id/iv_title_photo1"
        android:layout_alignLeft="@+id/tv_titile1"
        android:layout_alignStart="@+id/tv_titile1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/iv_title_photo1"
        android:layout_toRightOf="@+id/imageView1"
        android:id="@+id/tv_name1" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:drawableLeft="@mipmap/clock_small"
        android:layout_toLeftOf="@+id/tv_numbers1"
        android:layout_alignBottom="@+id/iv_title_photo1"
        android:layout_marginRight="20dp"
        android:id="@+id/tv_time1" />

    <TextView
        android:id="@+id/tv_numbers1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/number_small"
        android:drawablePadding="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/iv_title_photo1"


        />



</RelativeLayout>