<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <com.ctrl.forum.customview.RecyclableImageView
        android:id="@+id/iv_title_photo1"
        android:scaleType="centerCrop"
        android:layout_width="90dp"
        android:layout_height="80dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        android:layout_marginLeft="5dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:textSize="@dimen/LargeTextSize"
        android:layout_alignTop="@+id/iv_title_photo1"
        android:layout_toRightOf="@+id/iv_title_photo1"
        android:layout_toEndOf="@+id/iv_title_photo1"
        android:id="@+id/tv_titile1" />


    <com.ctrl.forum.customview.RoundImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitXY"
        android:id="@+id/imageView1"
        android:layout_alignBottom="@+id/iv_title_photo1"
        android:layout_alignLeft="@+id/tv_titile1"
        android:layout_alignStart="@+id/tv_titile1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_micro"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="13dp"
        android:textColor="@color/text_gray"
        android:layout_alignBottom="@+id/iv_title_photo1"
        android:layout_toRightOf="@+id/imageView1"
        android:id="@+id/tv_name1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:drawableLeft="@mipmap/clock_small"
        android:textColor="@color/text_gray"
        android:layout_toLeftOf="@+id/tv_numbers1"
        android:textSize="@dimen/text_size_micro"
        android:layout_alignBottom="@+id/iv_title_photo1"
        android:layout_marginRight="20dp"
        android:id="@+id/tv_time1" />

    <TextView
        android:id="@+id/tv_numbers1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_micro"
        android:drawableLeft="@mipmap/number_small"
        android:textColor="@color/text_gray"
        android:drawablePadding="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/iv_title_photo1"
        />

    <TextView
        android:id="@+id/tv_daoyu"
        android:layout_below="@+id/iv_title_photo1"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:textColor="@color/text_gray"
        android:visibility="gone"
        android:paddingBottom="5dp"
        />

</RelativeLayout>