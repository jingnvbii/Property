<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_pinerest_style_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        />
    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#b0000000"
        >
        <TextView
            android:id="@+id/tv_pinerest_style_title"
            android:layout_width="match_parent"
            android:textSize="@dimen/LargeTextSize"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            />

         <ImageView
             android:id="@+id/iv_zan"
             android:layout_below="@+id/tv_pinerest_style_title"
             android:layout_width="wrap_content"
             android:layout_marginTop="5dp"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:src="@mipmap/zan_pinterest"/>
        <TextView
            android:id="@+id/tv_pinerest_style_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_zan"
            android:layout_below="@+id/tv_pinerest_style_title"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/text_size_micro"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_pinerest_style_imagenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_size_micro"
            android:layout_below="@+id/tv_pinerest_style_title"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
</FrameLayout>