<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RatingBar
        style="@style/roomRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar_pinglun"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tv_time"
        android:isIndicator="true"
        android:rating="4"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/iv_style_img"
        />
    <TextView
        android:id="@+id/id_pingjia_content"
        android:layout_below="@+id/ratingBar_pinglun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="很好"
        android:layout_marginLeft="10dp"
        android:textColor="@color/text_black"/>
    <TextView
        android:id="@+id/tv_ping_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:text="张某"
        android:textColor="@color/text_gray"/>
    <TextView
        android:id="@+id/tv_pinlun_time"
        android:layout_below="@+id/ratingBar_pinglun"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="2016.3.3 12：63:55"
        android:layout_marginRight="10dp"
        android:textColor="@color/text_gray"/>


    <RelativeLayout
        android:layout_below="@+id/tv_pinlun_time"
        android:layout_width="match_parent"
        android:background="@color/main_bg"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_huifu_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="fsdfsdfsdfdsfdsfsdfsdfsdfsdfsdffdfsdf"/>

        <TextView
            android:id="@+id/tv_huifu_time"
            android:layout_below="@+id/tv_huifu_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016.3.3 12：63:55"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            />


    </RelativeLayout>

</RelativeLayout>