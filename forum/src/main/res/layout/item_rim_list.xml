<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!--热门分类-->
    <RelativeLayout
        android:id="@+id/rl_hot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_left_and_right"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_pic"
            android:src="@mipmap/hot"
            android:layout_marginTop="@dimen/margin_left_and_right"
            android:layout_marginLeft="@dimen/margin_left_and_right"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hot_div"
            android:id="@+id/tv_title"
            android:textColor="@color/rim_text"
            android:textSize="@dimen/text_size_basic"
            android:layout_marginTop="@dimen/margin_left_and_right"
            android:layout_toRightOf="@+id/iv_pic"
            android:layout_toEndOf="@+id/iv_pic" />

        <com.ctrl.forum.customview.NoScrollGridView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/line_gray"
            android:id="@+id/gv_hot"
            android:scrollbars="none"
            android:numColumns="3"
            android:paddingLeft="1dp"
            android:paddingTop="1dp"
            android:paddingRight="1dp"
            android:paddingBottom="1dp"
            android:horizontalSpacing="1dp"
            android:verticalSpacing="1dp"
            android:layout_marginBottom="@dimen/margin_left_and_right"
            android:layout_marginRight="@dimen/margin_left_and_right"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="@dimen/margin_left_and_right"
            android:layout_marginTop="@dimen/margin_left_and_right" />
    </RelativeLayout>

</LinearLayout>
