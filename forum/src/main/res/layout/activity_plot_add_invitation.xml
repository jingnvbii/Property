<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/main_bg"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height">

        <TextView
            android:id="@+id/tv_release_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="取消"
            android:paddingLeft="10dp"
            android:textColor="@color/text_blue"
            android:gravity="center_vertical"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="发布帖子"
            android:gravity="center"
            android:textColor="@color/text_black"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/tv_release_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="存草稿"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_blue"
            android:gravity="center_vertical"
            />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_all"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="投稿的行为表明您同意"
                        />
                    <TextView
                        android:id="@+id/tougao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 《投稿协议》 "
                        android:textColor="@color/text_blue"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="小区名称："
                        android:textColor="@color/text_black"/>

                    <TextView
                        android:id="@+id/tv_plot_name"
                        android:textColor="@color/text_black"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_left_and_right"
                        android:paddingTop="10dp"
                        android:text="帖子内容:"
                        android:textColor="@color/text_black"/>

                    <EditText
                        android:id="@+id/et_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="7"
                        android:background="@null"
                        android:layout_marginRight="@dimen/margin_left_and_right"
                        android:layout_marginLeft="5dp"
                        android:gravity="top"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>
                <!-- 网格显示图片 行列间距5dp 每列宽度90dp -->
                <LinearLayout
                    android:id="@+id/ll_image_one"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv01"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:scaleType="fitXY"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/add_pic"/>
                    <ImageView
                        android:id="@+id/iv02"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:layout_margin="5dp"
                        android:visibility="invisible"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/add_pic"/>
                    <ImageView
                        android:id="@+id/iv03"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:layout_margin="5dp"
                        android:visibility="invisible"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/add_pic"/>
                    <ImageView
                        android:id="@+id/iv04"
                        android:layout_width="0dp"
                        android:layout_margin="5dp"
                        android:scaleType="fitXY"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/add_pic"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_image_second"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv05"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:scaleType="fitXY"
                        android:visibility="invisible"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/add_pic"/>
                    <ImageView
                        android:id="@+id/iv06"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:scaleType="fitXY"
                        android:visibility="invisible"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/add_pic"/>
                    <ImageView
                        android:id="@+id/iv07"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/add_pic"/>
                    <ImageView
                        android:id="@+id/iv08"
                        android:layout_width="0dp"
                        android:layout_margin="5dp"
                        android:scaleType="fitXY"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/add_pic"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_image_third"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv09"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:scaleType="fitXY"
                        android:visibility="invisible"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/add_pic"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:scaleType="fitXY"
                        android:visibility="invisible"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/add_pic"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:scaleType="fitXY"
                        android:visibility="invisible"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/add_pic"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:scaleType="fitXY"
                        android:visibility="invisible"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/add_pic"/>
                </LinearLayout>







            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_height="@dimen/text_height">

                <TextView
                    android:id="@+id/tv_tel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="联系电话"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@mipmap/iconfont_dianhua"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="位置"
                    android:drawablePadding="5dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/iconfont_dingwei"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@mipmap/iconfont_mingpian"
                    android:text="名片"
                    android:layout_weight="1"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_release"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/release"
                android:padding="5dp"
                android:textColor="@color/text_white"
                android:background="@drawable/btn_blue_selector"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
