<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.ctrl.forum.customview.MineHeadView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/iconfont_head"
        android:layout_marginLeft="@dimen/margin_left_and_right"
        android:layout_marginTop="@dimen/margin_left_and_right"
        android:id="@+id/iv_head" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vip_name"
        android:id="@+id/tv_name"
        android:textSize="16sp"
        android:textColor="@color/text_black1"
        android:layout_marginLeft="@dimen/margin_left_and_right"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_head"
        android:layout_toEndOf="@+id/iv_head" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_grade"
        android:src="@mipmap/vip_icon2"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_alignBottom="@+id/tv_name"
        android:layout_toRightOf="@+id/tv_name"
        android:layout_toEndOf="@+id/tv_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/comment_year"
        android:textColor="#757575"
        android:id="@+id/tv_data"
        android:layout_marginRight="@dimen/margin_left_and_right"
        android:textSize="@dimen/text_size_basic"
        android:layout_alignBottom="@+id/iv_grade"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:id="@+id/rl_reply_voice"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_border_bg_voice"
        android:layout_below="@+id/iv_head"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_alignStart="@+id/tv_name"
        android:layout_marginBottom="10dp">

        <View
            android:id="@+id/id_recorder_anim"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|left"
            android:background="@drawable/voice_default"/>

        <TextView
            android:id="@+id/tv_reply_voice_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:textColor="@color/text_white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>


</RelativeLayout>
