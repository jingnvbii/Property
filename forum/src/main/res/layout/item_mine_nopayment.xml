<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_left_and_right"
        android:background="@color/order_bg"
        android:id="@+id/textView1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/textView1"
        android:id="@+id/relativeLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ctrl"
            android:textSize="@dimen/text_size_basic"
            android:id="@+id/ctrl"
            android:layout_marginLeft="@dimen/margin_left_and_right"
            android:textColor="@color/text_newpwd"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_more"
            android:src="@mipmap/jiantou_right_small"
            android:layout_marginLeft="@dimen/margin_left_and_right"
            android:layout_toRightOf="@+id/ctrl"
            android:layout_toEndOf="@+id/ctrl"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_delete"
            android:src="@mipmap/iconfont_lajixiang"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_left_and_right"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_left_and_right"
        android:background="@color/order_line"
        />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:scaleType="fitXY"
        android:id="@+id/iv_head"
        android:src="@mipmap/image_default"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/margin_left_and_right"
        android:layout_marginTop="@dimen/margin_left_and_right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/red_bg"
        android:id="@+id/textView22"
        android:layout_marginTop="@dimen/margin_left_and_right"
        android:layout_marginLeft="@dimen/margin_left_and_right"
        android:layout_below="@+id/relativeLayout"
        android:layout_toRightOf="@+id/iv_head"
        android:layout_toEndOf="@+id/iv_head" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥1000.1"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/red_bg"
        android:id="@+id/tv_total"
        android:layout_alignBottom="@+id/textView22"
        android:layout_toRightOf="@+id/textView22"
        android:layout_toEndOf="@+id/textView22" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time"
        android:textColor="@color/text_newpwd"
        android:id="@+id/tv_time"
        android:textSize="@dimen/text_size_basic"
        android:layout_below="@+id/textView22"
        android:layout_alignLeft="@+id/textView22"
        android:layout_alignStart="@+id/textView22" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_content"
        android:text="@string/offer"
        android:textColor="@color/text_newpwd"
        android:textSize="@dimen/text_size_basic"
        android:layout_below="@+id/tv_time"
        android:layout_alignLeft="@+id/tv_time"
        android:layout_alignStart="@+id/tv_time" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line_gray"
        android:id="@+id/textView25"
        android:layout_below="@+id/tv_content"
        android:layout_alignLeft="@+id/tv_content"
        android:layout_marginRight="@dimen/margin_left_and_right"
        android:layout_marginTop="@dimen/margin_left_and_right"
        android:layout_alignStart="@+id/tv_content" />

    <Button
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="@string/payment"
        android:background="@color/red_bg"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_size_basic"
        android:id="@+id/bt_right"
        android:layout_below="@+id/textView25"
        android:layout_alignRight="@+id/textView25"
        android:layout_alignEnd="@+id/textView25"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="@dimen/text_size_basic"/>
    <Button
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="取消订单"
        android:background="@color/red_bg"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_size_basic"
        android:id="@+id/bt_left"
        android:layout_below="@+id/textView25"
        android:layout_toLeftOf="@+id/bt_right"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="@dimen/text_size_basic"/>


</RelativeLayout>
