<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_title_photo"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:src="@mipmap/item_store_list"
        android:scaleType="fitXY"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/margin_left_and_right"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/iv_title_photo"
        android:layout_alignBottom="@+id/iv_title_photo"
        android:orientation="vertical"
        android:layout_alignTop="@+id/iv_title_photo"
        android:id="@+id/linearLayout5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_basic"
            android:textColor="@color/rim"
            android:gravity="center_vertical"
            android:text="小贝日用百货便利店"
            android:id="@+id/tv_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="月销量:20"
            android:gravity="center_vertical"
            android:textColor="@color/rim_gray"
            android:textSize="14sp"
            android:id="@+id/tv_sale"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="165元/份"
            android:id="@+id/tv_money"
            android:textColor="@color/red_bg"
            android:textSize="@dimen/text_size_basic"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView18"
        android:src="@mipmap/iconfont_jiantou"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:paddingBottom="@dimen/margin_left_and_right"
        android:paddingLeft="@dimen/margin_left_and_right"
        android:paddingRight="@dimen/margin_left_and_right"
        android:paddingTop="@dimen/margin_left_and_right"
        />


</RelativeLayout>