<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_alignTop="@+id/iv_title_photo"
        android:layout_toRightOf="@+id/iv_title_photo"
        android:textSize="@dimen/LargeTextSize"
        android:layout_toEndOf="@+id/iv_title_photo"
        android:id="@+id/tv_titile3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ll"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_titile3"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <com.ctrl.forum.customview.RecyclableImageView
        android:id="@+id/iv_image3_01"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginRight="5dp"
        android:scaleType="centerCrop"
        android:layout_height="80dp"
        />
    <com.ctrl.forum.customview.RecyclableImageView
        android:id="@+id/iv_image3_02"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerHorizontal="true"
        android:layout_height="80dp"
        />
    <com.ctrl.forum.customview.RecyclableImageView
        android:id="@+id/iv_image3_03"
        android:layout_alignParentRight="true"
        android:layout_width="0dp"
        android:scaleType="centerCrop"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_height="80dp"
        />

    </LinearLayout>




    <com.ctrl.forum.customview.RoundImageView
        android:layout_below="@+id/ll"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitXY"
        android:id="@+id/imageView3"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/text_size_micro"
        android:layout_alignBottom="@+id/iv_title_photo"
        android:layout_alignLeft="@+id/tv_titile3"
        android:layout_alignStart="@+id/tv_titile3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/text_gray"
        android:layout_below="@+id/ll"
        android:textSize="@dimen/text_size_micro"
        android:layout_alignBottom="@+id/iv_title_photo"
        android:layout_toRightOf="@+id/imageView3"
        android:id="@+id/tv_name3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ll"
        android:drawablePadding="5dp"
        android:textColor="@color/text_gray"
        android:drawableLeft="@mipmap/clock_small"
        android:textSize="@dimen/text_size_micro"
        android:layout_toLeftOf="@+id/tv_numbers03"
        android:layout_alignBottom="@+id/iv_title_photo"
        android:layout_marginRight="20dp"
        android:id="@+id/tv_time3" />

    <TextView
        android:id="@+id/tv_numbers03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableLeft="@mipmap/number_small"
        android:drawablePadding="5dp"
        android:textColor="@color/text_gray"
        android:layout_below="@+id/ll"
        android:textSize="@dimen/text_size_micro"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/iv_title_photo"


        />

    <TextView
        android:id="@+id/tv_daoyu"
        android:layout_below="@+id/imageView3"
        android:layout_width="match_parent"
        android:textColor="@color/text_gray"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        />



</RelativeLayout>