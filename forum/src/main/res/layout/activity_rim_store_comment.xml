<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pic_bg"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_common_red"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:id="@+id/include6" />
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:id="@+id/lv_content"
        android:background="@color/white" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/comment_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="1"
        android:id="@+id/linearLayout3">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_yuyin"
            android:src="@mipmap/iconfont_yuyin"
           android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_and_right"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_add"
            android:src="@mipmap/add"
            android:layout_toRightOf="@+id/iv_yuyin"
            android:layout_marginLeft="5dp"
           android:layout_centerVertical="true"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_content"
            android:hint="输入评论..."
            android:textColorHint="@color/comment_bg"
            android:background="@drawable/et_white"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_basic"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/iv_add"
            android:layout_toLeftOf="@+id/tv_huitie"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回帖"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_basic"
            android:layout_marginEnd="@dimen/margin_left_and_right"
            android:textColor="#117fd5"
            android:layout_marginRight="@dimen/margin_left_and_right"
            android:id="@+id/tv_huitie" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/comment_line" />
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/pic_bg"
        android:id="@+id/lv_pic"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/rl_face"
            android:background="@drawable/bt_gray"
            android:layout_marginTop="@dimen/margin_left_and_right"
            android:layout_marginLeft="@dimen/margin_left_and_right"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView19"
                android:src="@mipmap/iconfont_jiabiaoqing"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/rl_pic"
            android:layout_toRightOf="@+id/rl_face"
            android:background="@drawable/bt_gray"
            android:layout_marginTop="@dimen/margin_left_and_right"
            android:layout_marginLeft="5dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_pic"
                android:src="@mipmap/picture"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/rl_shoot"
            android:layout_toRightOf="@+id/rl_pic"
            android:background="@drawable/bt_gray"
            android:layout_marginTop="@dimen/margin_left_and_right"
            android:layout_marginLeft="5dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_shoot"
                android:src="@mipmap/shoot"
                 />
        </RelativeLayout>


    </RelativeLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hsv_pic"
            android:background="@color/white"
            android:layout_marginBottom="@dimen/margin_left_and_right"
            android:visibility="gone">

            <ImageView
                android:src="@mipmap/fish"
                android:layout_marginLeft="@dimen/margin_left_and_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </HorizontalScrollView>

</LinearLayout>
