<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/sanjiao_shang" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/iv01"
            android:background="@color/line_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_zhikanlouzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="只看楼主"
            android:layout_marginLeft="20dp"
            android:drawableTop="@mipmap/zhikanlouzhu"
            android:drawablePadding="5dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_daoxu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="倒叙查看"
            android:layout_centerHorizontal="true"
            android:drawableTop="@mipmap/daoxu"
            android:drawablePadding="5dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_pinbizuozhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="屏蔽作者"
            android:layout_alignParentRight="true"
            android:drawableTop="@mipmap/pinbizuozhe"
            android:layout_marginRight="20dp"
            android:drawablePadding="5dp"
            android:gravity="center"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_jubao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="举报"
            android:layout_marginLeft="20dp"
            android:drawableTop="@mipmap/jubao"
            android:drawablePadding="5dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_fasongshixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="倒叙查看"
            android:layout_centerHorizontal="true"
            android:drawableTop="@mipmap/shixin"
            android:drawablePadding="5dp"
            android:gravity="center"
            />
    </RelativeLayout>


</LinearLayout>