<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@mipmap/xian"
        android:layout_marginLeft="@dimen/margin_left_and_right"
        android:layout_marginRight="@dimen/margin_left_and_right"
        android:layout_marginTop="@dimen/margin_left_and_right">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_left_and_right"
            android:layout_marginBottom="@dimen/margin_left_and_right"
            android:layout_marginLeft="@dimen/margin_left_and_right"
            android:id="@+id/linearLayout4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="@string/juan_name"
                android:textColor="@color/rim_text"
                android:gravity="center_vertical"
                android:id="@+id/tv_name"
                android:textSize="@dimen/text_size_basic"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/rim_text"
                    android:text="@string/time_limit"
                    android:textSize="@dimen/text_size_basic"
                    android:id="@+id/tv_limit" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/rim_text"
                    android:text="@string/limit_day"
                    android:textSize="@dimen/text_size_basic"
                    android:id="@+id/time_limit" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ï¿¥100"
            android:id="@+id/tv_money"
            android:textSize="24sp"
            android:textColor="@color/text_white"
            android:layout_alignTop="@+id/linearLayout4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/margin_left_and_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goods_limit"
            android:id="@+id/tv_limit_goods"
            android:textSize="14sp"
            android:textColor="@color/text_white"
            android:layout_below="@+id/tv_money"
            android:layout_alignRight="@+id/tv_money"
            android:layout_alignEnd="@+id/tv_money" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/use_man"
            android:id="@+id/tv_use_man"
            android:textSize="12sp"
            android:textColor="@color/text_white"
            android:layout_below="@+id/tv_limit_goods"
            android:layout_alignRight="@+id/tv_limit_goods"
            android:layout_alignEnd="@+id/tv_limit_goods" />

    </RelativeLayout>
</RelativeLayout>
