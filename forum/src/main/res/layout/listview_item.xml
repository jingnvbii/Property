<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:descendantFocusability="afterDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/friends_item_header_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#efefef"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/friends_item_header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="日用百货"
            android:textColor="@color/text_black"
            android:textSize="16sp" />
    </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/iv_style_img"
                android:layout_width="60dp"
                android:scaleType="fitXY"
                android:layout_height="80dp"
                android:src="@mipmap/style1_img"
                android:layout_alignBottom="@+id/tv_vertical_price" />

            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_toRightOf="@+id/iv_style_img"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text="小贝日用百货便利店"
                android:textSize="16sp"
                android:textColor="@color/text_black"
                />
            <TextView
                android:id="@+id/tv_numbers"
                android:layout_below="@+id/tv_shop_name"
                android:layout_toRightOf="@+id/iv_style_img"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="月销 100"
                android:textColor="@color/text_gray"
                />
            <TextView
                android:layout_below="@+id/tv_numbers"
                android:layout_toRightOf="@+id/iv_style_img"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="165/份"
                android:textColor="@color/text_red"
                android:id="@+id/tv_vertical_price" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_vertical_price"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <ImageView
                    android:id="@+id/item_vertical_jian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_toLeftOf="@+id/item_vertical_numbers"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/subtract_cart_red"/>
                <TextView
                    android:id="@+id/item_vertical_numbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/item_vertical_jia"
                    android:textColor="@color/text_black"
                    android:text=""/>

                <ImageView
                    android:id="@+id/item_vertical_jia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/add_cart_red"/>
            </RelativeLayout>
        </RelativeLayout>



    </LinearLayout>
