<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_number"
            android:textSize="@dimen/text_size_basic"
            android:layout_marginLeft="@dimen/margin_left_and_right"
            android:id="@+id/textView4"
            android:textColor="@color/rim_gray"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="48983896244248"
            android:textSize="@dimen/text_size_basic"
            android:id="@+id/tv_number"
            android:textColor="@color/rim_gray"
            android:layout_alignBottom="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"
            android:layout_toEndOf="@+id/textView4" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"
    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_time"
            android:textSize="@dimen/text_size_basic"
            android:layout_marginLeft="@dimen/margin_left_and_right"
            android:id="@+id/textView"
            android:textColor="@color/rim_gray"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-06-15 15:26:32"
            android:textSize="@dimen/text_size_basic"
            android:id="@+id/tv_order_time"
            android:textColor="@color/rim_gray"
            android:layout_alignBottom="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_name"
            android:textSize="@dimen/text_size_basic"
            android:layout_marginLeft="@dimen/margin_left_and_right"
            android:id="@+id/textView3"
            android:textColor="@color/text_black"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李先生"
            android:textSize="@dimen/text_size_basic"
            android:id="@+id/tv_order_name"
            android:textColor="@color/text_black"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_phone"
            android:textSize="@dimen/text_size_basic"
            android:layout_marginLeft="@dimen/margin_left_and_right"
            android:id="@+id/textView32"
            android:textColor="@color/text_black"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13518652964"
            android:textSize="@dimen/text_size_basic"
            android:id="@+id/tv_order_phone"
            android:textColor="@color/text_black"
            android:layout_alignBottom="@+id/textView32"
            android:layout_toRightOf="@+id/textView32"
            android:layout_toEndOf="@+id/textView32" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView21"
            android:layout_marginLeft="3dp"
            android:src="@mipmap/iconfont_dianhua_black"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_order_phone"
            android:layout_toEndOf="@+id/tv_order_phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已付款"
            android:textColor="@color/red_bg"
            android:id="@+id/tv_state"
            android:layout_marginRight="@dimen/margin_left_and_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_address"
            android:textSize="@dimen/text_size_basic"
            android:layout_marginLeft="@dimen/margin_left_and_right"
            android:id="@+id/textView1"
            android:textColor="@color/text_black"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="山东经十路中润世纪广场"
            android:textSize="@dimen/text_size_basic"
            android:id="@+id/tv_order_address"
            android:textColor="@color/text_black"
            android:layout_alignBottom="@+id/textView1"
            android:layout_toRightOf="@+id/textView1"
            android:layout_toEndOf="@+id/textView1" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/rl_bt"
        android:background="@color/main_bg">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="发货"
            android:background="@color/red_bg"
            android:textSize="@dimen/text_size_basic"
            android:id="@+id/bt_send"
            android:textColor="@color/text_white"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_left_and_right"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rl_dingdan"
            android:background="@color/main_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单详情"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/text_size_basic"
                android:textColor="@color/rim_text"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ffa92d"
            />

        <ListView
            android:divider="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/line_gray"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rl_total"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计:"
                android:textSize="@dimen/text_size_basic"
                android:textColor="@color/text_black1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_total" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥45"
                android:layout_marginRight="10dp"
                android:id="@+id/tv_money"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/line_gray"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rl_wu"
            android:background="@color/main_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物流信息"
                android:textSize="@dimen/text_size_basic"
                android:textColor="@color/rim_text"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/line_gray"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rl_wu_company"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物流公司:"
                android:textSize="@dimen/text_size_basic"
                android:textColor="@color/text_black1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_wuliu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_company"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/tv_wuliu"
                android:layout_toEndOf="@+id/tv_wuliu" />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/line_gray"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rl_wu_dan"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物流单号:"
                android:textSize="@dimen/text_size_basic"
                android:textColor="@color/text_black1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_wuliu_dan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_company_hao"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/tv_wuliu_dan"
                android:layout_toEndOf="@+id/tv_wuliu_dan" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/line_gray"
            />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确认发货"
            android:textColor="@color/text_white"
            android:background="@drawable/btn_red_selector"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="@dimen/text_size_medium"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

    </LinearLayout>

    </ScrollView>
</LinearLayout>
