<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.ctrl.forum.customview.MineHeadView
        android:layout_width="@dimen/image_heade"
        android:layout_height="50dp"
        android:id="@+id/iconfont_head"
        android:src="@mipmap/my_gray"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/margin_left_and_right"
        android:layout_marginLeft="@dimen/margin_left_and_right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/post_content"
        android:id="@+id/post_title"
        android:textColor="#575757"
        android:textSize="@dimen/text_size_basic"
        android:layout_alignTop="@+id/iconfont_head"
        android:layout_toRightOf="@+id/iconfont_head"
        android:layout_toEndOf="@+id/iconfont_head"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/post_user_ID"
        android:id="@+id/textView43"
        android:textColor="#999999"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/post_title"
        android:layout_alignLeft="@+id/post_title"
        android:layout_alignStart="@+id/post_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/post_user_name"
        android:singleLine="true"
        android:ellipsize="end"
        android:id="@+id/tv_post_name"
        android:textColor="#999999"
        android:textSize="14sp"
        android:layout_alignBottom="@+id/textView43"
        android:layout_toRightOf="@+id/textView43"
        android:layout_toEndOf="@+id/textView43" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/post_time"
        android:textColor="#999999"
        android:textSize="14sp"
        android:id="@+id/tv_time"
        android:layout_marginLeft="@dimen/margin_left_and_right"
        android:layout_alignBottom="@+id/tv_post_name"
        android:layout_toLeftOf="@+id/tv_post_time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-2-9"
        android:id="@+id/tv_post_time"
        android:textColor="#999999"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/tv_time"
        android:layout_marginRight="10dp"/>


</RelativeLayout>
