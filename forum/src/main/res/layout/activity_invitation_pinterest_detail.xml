<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/main_bg"
    android:layout_height="match_parent">

    <include
        layout="@layout/toolbar_common_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        ></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <com.ctrl.forum.customview.RoundImageView
            android:id="@+id/title_image"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="@dimen/margin_left_and_right"
            android:layout_height="wrap_content"
            android:src="@mipmap/round_img"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_toRightOf="@id/title_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="发帖人"
            android:textColor="@color/text_blue"/>


        <ImageView
            android:layout_toRightOf="@id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/vip_icon3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/jiantou_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_left_and_right"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/margin_left_and_right"
        android:text="全国里的范德萨发的飞" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3月5日"
        android:layout_marginLeft="@dimen/margin_left_and_right"
        android:layout_marginTop="5dp"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/edit_white_shap"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_black"
            android:padding="10dp"
            android:text="哈雷哈雷"/>

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:layout_marginRight="10dp"
              android:src="@mipmap/tel"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_marginRight="@dimen/margin_left_and_right"
        android:layout_marginLeft="@dimen/margin_left_and_right"
        android:layout_height="wrap_content"
        android:textColor="@color/text_gray"
        android:text="fdsfsdfsdffdssssssssssssssssssssssssssssssss
        sssssssfdsfsdfsdfsdfsdfsdfdfdsfsdfsdf"/>

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_and_right"
        android:layout_marginRight="@dimen/margin_left_and_right"
        android:scaleType="fitXY"
        android:src="@mipmap/fanbingbing"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/margin_left_and_right"
        android:text="热门评论"
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <com.ctrl.forum.customview.RoundImageView
                android:id="@+id/pinglun_image"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/margin_left_and_right"
                android:layout_height="wrap_content"
                android:src="@mipmap/round_img"
                />

            <TextView
                android:id="@+id/tv_name_punglun"
                android:layout_toRightOf="@id/pinglun_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="发帖人"
                android:textColor="@color/text_gray"/>

            <TextView
                android:layout_below="@id/tv_name_punglun"
                android:layout_toRightOf="@id/pinglun_image"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/text_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赞一个"
                />


            <ImageView
                android:layout_toRightOf="@id/tv_name_punglun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/vip_icon3"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:text="2014/5/6"
                android:layout_marginRight="@dimen/margin_left_and_right"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_marginTop="1px"
            android:layout_height="wrap_content">
            <com.ctrl.forum.customview.RoundImageView
                android:id="@+id/pinglun2_image"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/margin_left_and_right"
                android:layout_height="wrap_content"
                android:src="@mipmap/round_img"
                />

            <TextView
                android:id="@+id/tv_name_punglun2"
                android:layout_toRightOf="@id/pinglun2_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="发帖人"
                android:textColor="@color/text_gray"/>

            <TextView
                android:layout_below="@id/tv_name_punglun2"
                android:layout_toRightOf="@id/pinglun2_image"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/text_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赞一个"
                />


            <ImageView
                android:layout_toRightOf="@id/tv_name_punglun2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/vip_icon3"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2014/5/6"
                android:layout_marginTop="20dp"
                android:layout_marginRight="@dimen/margin_left_and_right"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_marginTop="1px"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">
            <com.ctrl.forum.customview.RoundImageView
                android:id="@+id/pinglun3_image"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/margin_left_and_right"
                android:layout_height="wrap_content"
                android:src="@mipmap/round_img"
                android:visibility="invisible"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看更多评论..."
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/pinglun3_image"
                android:textColor="@color/text_black"
                android:layout_marginBottom="10dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/jiantou_right"/>
        </RelativeLayout>

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_zan"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/zan_unpress"/>
            <TextView
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/iv_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="10"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@mipmap/share"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@mipmap/pinglun"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@mipmap/more"/>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>