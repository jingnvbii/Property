<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/main_bg"
    android:layout_height="match_parent">

    <include
        layout="@layout/toolbar_common_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        ></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray" />


      <LinearLayout
          android:layout_marginTop="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:background="@color/white">
      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:layout_height="wrap_content">

          <com.ctrl.forum.customview.RoundImageView
              android:id="@+id/title_image"
              android:layout_width="50dp"
              android:layout_marginTop="10dp"
              android:scaleType="fitXY"
              android:layout_marginBottom="10dp"
              android:layout_marginLeft="@dimen/margin_left_and_right"
              android:layout_height="50dp"
              android:src="@mipmap/round_img"
              />

          <LinearLayout
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">

              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1">
                  <TextView
                      android:id="@+id/tv_name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:layout_centerVertical="true"
                      android:text="发帖人"
                      android:textColor="@color/text_black"/>


                  <ImageView
                      android:id="@+id/iv_levlel"
                      android:layout_toRightOf="@id/tv_name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:src="@mipmap/vip_icon3"
                      android:layout_marginLeft="5dp"
                      />

                  <TextView
                      android:id="@+id/tv_release_time"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:text="发布时间：2016-2-9"
                      android:textColor="@color/text_gray"
                      android:layout_marginRight="@dimen/margin_left_and_right"
                      />
              </RelativeLayout>
              <View
                  android:layout_below="@+id/tv_name"
                  android:layout_width="match_parent"
                  android:layout_toRightOf="@+id/title_image"
                  android:layout_marginLeft="10dp"
                  android:layout_height="2px"
                  android:background="@color/line_gray"></View>
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1">
                  <TextView
                      android:id="@+id/tv_address"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="10dp"
                      android:textColor="@color/text_gray"
                      android:text="fdfsdfsdfs"/>
                  <TextView
                      android:id="@+id/tv_delete"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="删除本帖"
                      android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:paddingRight="10dp"
                      android:textColor="@color/text_red"/>



              </RelativeLayout>
          </LinearLayout>
      </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray" />

    <TextView
        android:id="@+id/tv_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
