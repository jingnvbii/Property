<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/main_bg"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/red_bg">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_left_and_right"
            android:src="@mipmap/white_arrow_left_none"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/login"
            android:layout_toRightOf="@id/iv_back"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_more"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_left_and_right"
            />
        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/register"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_medium"
            android:gravity="center"
            android:layout_marginRight="@dimen/margin_left_and_right"
            />
    </RelativeLayout>

    <View
        android:layout_marginTop="@dimen/margin_top"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/line_gray" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:hint="@string/user_name_hint"
        android:background="@null"
        android:paddingLeft="@dimen/margin_left_and_right"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_size_basic"
        android:text="13046024996"
        android:gravity="center_vertical"
        />

    <!--android:text="15688885075"-->

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/line_gray" />

    <EditText
        android:id="@+id/et_pass_word"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height"
        android:hint="@string/pass_word_hint"
        android:text="123456"
        android:inputType="numberPassword"
        android:background="@null"
        android:paddingLeft="@dimen/margin_left_and_right"
        android:textSize="@dimen/text_size_basic"
        android:textColor="@color/text_gray"
        android:gravity="center_vertical"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/line_gray" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:textColor="@color/text_white"
        android:background="@drawable/btn_red_selector"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="@dimen/text_size_medium"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tv_forget"
        android:layout_below="@id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_size_basic"
        android:text="@string/forget_pass_word"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_left_and_right"
                    android:layout_height="1px"
                    android:background="@color/line_gray" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_basic"
                    android:textColor="@color/text_gray"
                    android:layout_height="wrap_content"
                    android:text="使用第三方账号登录"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="1px"
                    android:layout_marginRight="@dimen/margin_left_and_right"
                    android:layout_gravity="center"
                    android:background="@color/line_gray" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_weibo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/weibo"
                    />
                <ImageView
                    android:id="@+id/iv_qqzone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/qqzone"
                    />
                <ImageView
                    android:id="@+id/iv_weixin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/weixin"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>