<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:id="@+id/iv_head"
        android:scaleType="fitXY"
        android:src="@mipmap/image_default"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/margin_left_and_right"
        android:layout_marginTop="@dimen/margin_left_and_right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/assess_name"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/red_bg"
        android:id="@+id/tv_name"
        android:layout_marginTop="@dimen/margin_left_and_right"
        android:layout_marginLeft="@dimen/margin_left_and_right"
        android:layout_below="@+id/relativeLayout"
        android:layout_toRightOf="@+id/iv_head"
        android:layout_toEndOf="@+id/iv_head" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/assess_total"
        android:textColor="@color/text_newpwd"
        android:id="@+id/textView24"
        android:textSize="@dimen/text_size_basic"
        android:layout_below="@+id/tv_name"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_alignStart="@+id/tv_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_data"
        android:text="@string/assess_time"
        android:textColor="@color/text_newpwd"
        android:textSize="@dimen/text_size_basic"
        android:layout_below="@+id/textView24"
        android:layout_alignLeft="@+id/textView24"
        android:layout_alignStart="@+id/textView24"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:textColor="@color/line_gray"
        android:id="@+id/textView25"
        android:layout_below="@+id/tv_data"
        android:layout_alignLeft="@+id/tv_data"
        android:layout_marginRight="@dimen/margin_left_and_right"
        android:layout_marginTop="5dp"
        android:layout_alignStart="@+id/tv_data" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="@string/assess_go"
        android:background="@color/red_bg"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_size_basic"
        android:id="@+id/assess_go"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_left_and_right"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="108å…ƒ"
        android:textSize="@dimen/text_size_basic"
        android:textColor="@color/text_newpwd"
        android:id="@+id/tv_total"
        android:layout_alignBottom="@+id/textView24"
        android:layout_toRightOf="@+id/textView24"
        android:layout_toEndOf="@+id/textView24" />


</RelativeLayout>
