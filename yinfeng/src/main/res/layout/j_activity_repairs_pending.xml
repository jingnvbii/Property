<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical"
    tools:context="com.ctrl.android.property.jason.ui.complaint.MyComplaintPretreatmentActivity">


    <include layout="@layout/toolbar_common_red"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"/>


    <ScrollView
        android:id="@+id/sc_repair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_my_repairs_pending_progress"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报修进度"
                    android:textColor="#000"
                    android:textSize="@dimen/TitleTextSize"/>

                <TextView
                    android:id="@+id/tv_my_repairs_pending_time"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_job_gray"
                    android:text="报修时间"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/LargeTextSize"/>
                <TextView
                    android:id="@+id/tv_repairs_type"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报修类型"
                    android:textColor="@color/text_job_gray"
                    android:layout_marginLeft="20dp"
                    android:textSize="@dimen/LargeTextSize"
                    />

                <TextView
                    android:id="@+id/tv_my_repairs_pending_money"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_job_gray"
                    android:text="付款金额"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/LargeTextSize"/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_job_gray"
                    android:text="报修内容："
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/LargeTextSize"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/xian_job_pre"/>

                <TextView
                    android:id="@+id/tv_my_repairs_pending_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9f9f9f"
                    android:inputType="textMultiLine"
                    android:text="dfdfsdfdfdf"/>

                <TextView
                    android:id="@+id/tv_baoxiu_image"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实景照片"
                    android:textSize="@dimen/LargeTextSize"
                    android:textColor="@color/text_gray"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv01_my_repairs_pending"
                        android:layout_marginLeft="20dp"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        />
                    <ImageView
                        android:id="@+id/iv02_my_repairs_pending"
                        android:layout_marginLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        />
                    <ImageView
                        android:id="@+id/iv03_my_repairs_pending"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:layout_weight="1"
                      />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_marginTop="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:id="@+id/tv_repairs_accept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="抢单"
                android:textSize="@dimen/TitleTextSize"
                android:textColor="@color/text_white"
                android:gravity="center"
                android:background="@mipmap/anniu_job_pre"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
