<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    >

    <FrameLayout
        android:id="@+id/frame_layout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">


        <ImageView
            android:id="@+id/iv_repair_staff_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_repair_personal" />

        <ImageView
            android:id="@+id/iv_repair_staff_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/frame_layout_1"
        />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/frame_layout_1"
        android:layout_alignTop="@+id/frame_layout_1"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/frame_layout_1">

        <TextView
            android:id="@+id/tv_repair_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张晓华"
            android:textColor="#51514c"
            android:textSize="@dimen/TitleTextSize" />

        <TextView
            android:id="@+id/tv_repair_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_repair_name"
            android:layout_marginTop="3dp"
            android:text="156566"
            android:textColor="#51514c"
            android:textSize="@dimen/BasicTextSize" />

        <TextView
            android:id="@+id/tv_repair_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_repair_tel"
            android:layout_marginTop="5dp"
            android:text="fdfdfdfd"
            android:textColor="#535051"
            android:textSize="@dimen/SmallTextSize" />


        <TextView
            android:id="@+id/tv_zhipai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/red_border_radio_btn"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="我要指定"
            android:textColor="@color/text_red"
            android:textSize="@dimen/TitleTextSize"
            />
    </RelativeLayout>
</RelativeLayout>