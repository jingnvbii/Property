<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <!--header-->
    <include
        android:id="@+id/header"
        layout="@layout/toolbar_common_red"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentTop="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:background="#dcdcdc" />

            <!--到访人-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="15dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/tv_visit_visitingpeople"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="到  访  人 :"
                    android:textSize="@dimen/LargeTextSize"
                    android:textColor="#686868"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/et_visit_visitingpeople"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:textSize="@dimen/BasicTextSize"
                    android:textColor="#686868"
                    android:background="@null"
                    android:layout_toRightOf="@+id/tv_visit_visitingpeople"/>
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#dcdcdc" />
            <!--拜访人-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/tv_visit_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拜  访  人 :"
                    android:textSize="@dimen/LargeTextSize"
                    android:textColor="#686868"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/et_visit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:textSize="@dimen/BasicTextSize"
                    android:textColor="#686868"
                    android:background="@null"
                    android:layout_toRightOf="@+id/tv_visit_name"/>
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#dcdcdc" />
            <!--拜访房间-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/tv_visit_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拜访房间 :"
                    android:textSize="@dimen/LargeTextSize"
                    android:textColor="#686868"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/et_visit_room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:textSize="@dimen/BasicTextSize"
                    android:textColor="#686868"
                    android:background="@null"
                    android:layout_toRightOf="@+id/tv_visit_room"/>
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="#dcdcdc" />
            <!--到访人数-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/tv_visit_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性        别 :"
                    android:textSize="@dimen/LargeTextSize"
                    android:textColor="#686868"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/et_visit_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:textSize="@dimen/BasicTextSize"
                    android:inputType="number"
                    android:textColor="#686868"
                    android:background="@null"
                    android:layout_toRightOf="@+id/tv_visit_count"/>
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#dcdcdc" />
            <!--到访人数-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/tv_visit_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="到访人数 :"
                    android:textSize="@dimen/LargeTextSize"
                    android:textColor="#686868"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/et_visit_car"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:textSize="@dimen/BasicTextSize"
                    android:textColor="#686868"
                    android:background="@null"
                    android:layout_toRightOf="@+id/tv_visit_car"/>
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#dcdcdc" />
            <!--拜访人电话-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/tv_visit_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="驾车来访 :"
                    android:textSize="@dimen/LargeTextSize"
                    android:textColor="#686868"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/et_visit_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:textSize="@dimen/BasicTextSize"
                    android:textColor="#686868"
                    android:background="@null"
                    android:layout_toRightOf="@+id/tv_visit_tel"/>
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#dcdcdc" />
            <!--预计停留时间-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/tv_visit_stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车  牌  号 :"
                    android:textSize="@dimen/LargeTextSize"
                    android:textColor="#686868"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/et_visit_stop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:textSize="@dimen/BasicTextSize"
                    android:background="@null"
                    android:layout_toRightOf="@+id/tv_visit_stop"/>
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#dcdcdc" />
            <!--预计停留时间-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/tv_visit_st2op"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="停留时间 :"
                    android:textSize="@dimen/LargeTextSize"
                    android:textColor="#686868"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/et_visit_stf2op"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="5dp"
                    android:textSize="@dimen/BasicTextSize"
                    android:textColor="#686868"
                    android:background="@null"
                    android:layout_toRightOf="@+id/tv_visit_st2op"/>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:background="#dcdcdc" />

            <!-- <LinearLayout
                 android:layout_marginTop="10dp"
                 android:background="@color/white"
                 android:layout_below="@id/tv_photo"
                 android:paddingBottom="15dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

                 <ImageView
                     android:id="@+id/iv01_second_hand_transfer"
                     android:layout_marginLeft="10dp"
                     android:adjustViewBounds="true"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:scaleType="centerCrop"
                     android:layout_height="match_parent"/>
                 <ImageView
                     android:id="@+id/iv02_second_hand_transfer"
