<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/main_bg"
    android:layout_height="match_parent">

    <!--header-->
    <include
        android:id="@+id/header"
        layout="@layout/toolbar_common_red"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentTop="true"/>

    <ScrollView
        android:id="@+id/sc"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <!--标题-->
    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="@dimen/activity_padding_smaller"
        android:layout_marginBottom="@dimen/between_element_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_notice_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:paddingLeft="15dp"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@color/text_black"
            android:textSize="@dimen/LargestTextSize"
            />
        <TextView
            android:id="@+id/tv_notice_detail_releaser"
            android:paddingTop="@dimen/activity_padding_smaller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/text_gray"
            android:gravity="center"
            android:textSize="@dimen/LargeTextSize"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_height="2px"
            android:background="#dcdcdc" />

    </LinearLayout>


    <!--公告内容-->


        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_below="@id/title_layout"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_notice_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="@dimen/LargeTextSize"
                />
            <ImageView
                android:id="@+id/iv_notice_detail_content"
                android:layout_width="@dimen/image_large_width"
                android:layout_height="@dimen/image_large_height"
                />

        </LinearLayout>

        <View
            android:layout_below="@id/sc"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_height="2px"
            android:background="#dcdcdc" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">


            <!--签收按钮-->
            <TextView
                android:id="@+id/tv_notice_detail_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="@color/text_white"/>
            <TextView
                android:layout_below="@id/tv_notice_detail_confirm"
                android:layout_width="match_parent"
                android:layout_height="20dp" />


        </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>