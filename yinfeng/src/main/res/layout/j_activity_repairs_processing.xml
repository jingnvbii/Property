<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical"
    tools:context="com.ctrl.android.property.jason.ui.complaint.MyComplaintPretreatmentActivity">


    <include layout="@layout/toolbar_common_red"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"/>


    <ScrollView
        android:id="@+id/sc_repair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_repairs_progress"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报修进度"
                    android:textColor="#000"
                    android:textSize="@dimen/TitleTextSize"/>

                <TextView
                    android:id="@+id/tv_repairs_time"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_job_gray"
                    android:text="报修时间"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/LargeTextSize"/>
                <TextView
                    android:id="@+id/tv_repairs_type"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报修类型"
                    android:textColor="@color/text_job_gray"
                    android:layout_marginLeft="20dp"
                    android:textSize="@dimen/LargeTextSize"
                    />

                <TextView
                    android:id="@+id/tv_repairs_money"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_job_gray"
                    android:text="报修金额"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/LargeTextSize"/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_job_gray"
                    android:text="报修内容："
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/LargeTextSize"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/xian_job_pre"/>

                <TextView
                    android:id="@+id/tv_repairs_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9f9f9f"
                    android:inputType="textMultiLine"
                    android:text="dfdfsdfdfdf"/>

                <TextView
                    android:id="@+id/tv_baoxiu_image"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实景照片"
                    android:textSize="@dimen/LargeTextSize"
                    android:textColor="@color/text_gray"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv01_repairs"
                        android:layout_marginLeft="20dp"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        />
                    <ImageView
                        android:id="@+id/iv02_repairs"
                        android:layout_marginLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        />
                    <ImageView
                        android:id="@+id/iv03_repairs"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:layout_weight="1"
                        />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/line_gray" />

                <LinearLayout
                    android:id="@+id/ll_my_repairs_wuye"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_repairs_wuye"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="物业反馈"
                        android:textColor="#000"
                        android:textSize="@dimen/TitleTextSize"/>

                    <TextView
                        android:id="@+id/tv_repairs_name"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="处理人员"
                        android:textColor="@color/text_job_gray"
                        android:layout_marginLeft="20dp"
                        android:textSize="@dimen/LargeTextSize"/>
                    <TextView
                        android:id="@+id/tv_repairs_telphone"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系电话"
                        android:textColor="@color/text_job_gray"
                        android:layout_marginLeft="20dp"
                        android:textSize="@dimen/LargeTextSize"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="处理结果"
                        android:textColor="@color/text_job_gray"
                        android:layout_marginLeft="20dp"
                        android:textSize="@dimen/LargeTextSize"/>

                    <EditText
                        android:id="@+id/et_repairs_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="5dp"
                        android:gravity="top"
                        android:background="@drawable/gray_border_shap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_gray"
                        android:lines="6"
                        android:inputType="textMultiLine"
                        android:text=""/>

                    <TextView
                        android:id="@+id/tv_wuye_image"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="反馈照片"
                        android:textSize="@dimen/LargeTextSize"
                        android:textColor="@color/text_job_gray"/>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv04_repairs"
                            android:layout_marginLeft="20dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@mipmap/iconfont_jiahao"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            />
                        <ImageView
                            android:id="@+id/iv05_repairs"
                            android:layout_marginLeft="10dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            />
                        <ImageView
                            android:id="@+id/iv06_repairs"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="0dp"
                            android:adjustViewBounds="true"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:layout_weight="1"
                            />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

