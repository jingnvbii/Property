<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white">

    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/rl_patrol"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >
    <TextView
            android:id="@+id/tv_line01"
            android:layout_width="3dp"
            android:layout_gravity="center"
            android:layout_height="10dp"
            android:background="@color/text_job_red"
            />

    <ImageView
        android:id="@+id/iv_patrol_disc_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/dsic_red"
        />
        <TextView
            android:id="@+id/tv_line02"
            android:layout_width="3dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:background="@color/text_job_red"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_patrol_2"
        android:layout_toRightOf="@id/rl_patrol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/xiaosanjiao"
            android:gravity="center"

            />
        <TextView
            android:id="@+id/tv_point_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fdffdfdfdf"
            android:textColor="@color/text_white"
            android:textSize="@dimen/TitleTextSize"
            android:background="@color/text_job_red"
            android:padding="5dp"
            />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_describe"
            android:layout_below="@id/ll_point"
            android:layout_marginTop="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/BasicTextSize"
            android:text=""
            />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_patrol_3"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/rl_patrol"
        android:layout_below="@id/rl_patrol_2"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:background="@drawable/xungeng_border"
        android:layout_height="100dp"
        >


        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_patrol_camera"
            android:layout_gravity="center"
            android:clickable="true"
            android:scaleType="center"
            android:layout_marginTop="3dp"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:src="@mipmap/camera"
            />
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:background="@color/text_job_red"
            ></View>
        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/et_patrol_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="@null"
            android:paddingLeft="5dp"
            android:gravity="top"
            android:lines="3"
            android:textSize="@dimen/BasicTextSize"
            android:hint="备注"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">
    <TextView
        android:id="@+id/tv_patrol_end"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:background="@drawable/red_border"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:clickable="true"
        android:text="完成"/>

    </RelativeLayout>

    </LinearLayout>

</LinearLayout>