<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <!--header-->
    <include
        android:id="@+id/header"
        layout="@layout/toolbar_common_red"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentTop="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="#dcdcdc" />

        <!--到访人-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="15dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tv_visit_visitingpeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到  访  人 :"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#686868"
                android:layout_centerVertical="true"/>
            <EditText
                android:id="@+id/et_visit_visitingpeople"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:textSize="@dimen/BasicTextSize"
                android:textColor="#686868"
                android:hint="请输入到访客姓氏"
                android:background="@null"
                android:layout_toRightOf="@+id/tv_visit_visitingpeople"/>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#dcdcdc" />
        <!--拜访人-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tv_visit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拜  访  人 :"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#686868"
                android:layout_centerVertical="true"/>
            <EditText
                android:id="@+id/et_visit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:hint="请输入拜访客姓氏"
                android:textSize="@dimen/BasicTextSize"
                android:textColor="#686868"
                android:background="@null"
                android:layout_toRightOf="@+id/tv_visit_name"/>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#dcdcdc" />
        <!--拜访房间-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tv_visit_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拜访房间 :"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#686868"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_visit_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:layout_marginTop="5dp"
                    android:id="@+id/spinner_visit_building"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:background="@null"
                    android:popupBackground="@drawable/edit_shap"
                    android:layout_height="wrap_content"
                    ></Spinner>
                <Spinner
                    android:layout_marginTop="5dp"
                    android:id="@+id/spinner_visit_unit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    ></Spinner>
                <Spinner
                    android:layout_marginTop="5dp"
                    android:id="@+id/spinner_visit_room"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    ></Spinner>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="#dcdcdc" />
        <!--性别-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <TextView
                android:id="@+id/tv_visit_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性        别 :"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#686868"
                android:layout_centerVertical="true"/>
            <RadioGroup
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_man"
                    android:button="@null"
                    android:background="@drawable/radio_btn_selector"
                    android:layout_width="wrap_content"
                    android:text="先生"
                    android:padding="5dp"
                    android:gravity="center"
                    android:checked="true"
                    android:layout_marginRight="10dp"
                    android:textColor="@drawable/text_color_selector"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rb_woman"
                    android:button="@null"
                    android:background="@drawable/radio_btn_selector"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:textColor="@drawable/text_color_selector"
                    android:text="女士"
                    android:layout_height="wrap_content" />
            </RadioGroup>

        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#dcdcdc" />
        <!--车牌号-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tv_visit_people_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到访人数 :"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#686868"
                android:layout_centerVertical="true"/>
            <EditText
                android:id="@+id/et_visit_people_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:textSize="@dimen/BasicTextSize"
                android:textColor="#686868"
                android:background="@null"
                android:layout_toRightOf="@id/tv_visit_people_num"/>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#dcdcdc" />
        <!--拜访人电话-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/tv_visit_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="驾车来访 :"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#686868"
                android:layout_centerVertical="true"/>
            <CheckBox
                android:id="@+id/cb_drove"
                android:background="@drawable/visit_drove_selector"
                android:button="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#dcdcdc" />
        <!--预计停留时间-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/tv_visit_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车  牌  号 :"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#686868"
                android:layout_centerVertical="true"/>
            <EditText
                android:id="@+id/et_visit_stop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="例如：鲁A88888"
                android:padding="5dp"
                android:clickable="false"
                android:enabled="false"
                android:textSize="@dimen/BasicTextSize"
                android:background="@null"
                android:layout_toRightOf="@+id/tv_visit_stop"/>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#dcdcdc" />
        <!--预计停留时间-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/tv_visit_st2op"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="停留时间 :"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#686868"
                android:layout_centerVertical="true"/>
            <EditText
                android:id="@+id/et_visit_stf2op"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:drawablePadding="5dp"
                android:textSize="@dimen/BasicTextSize"
                android:textColor="#686868"
                android:background="@null"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_visit_st2op"/>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="#dcdcdc" />


        <!--签收按钮-->
        <TextView
            android:id="@+id/tv_notice_detail_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@mipmap/anniu1"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="提交预约"
            android:padding="@dimen/activity_padding_small"
            android:textSize="@dimen/LargeTextSize"
            android:textColor="@color/text_white"/>
    </LinearLayout>


    </ScrollView>


</LinearLayout>