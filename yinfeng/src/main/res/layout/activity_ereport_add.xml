<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg"
    tools:context="com.ctrl.android.yinfeng.ui.ereport.EReportAddActivity">

    <include layout="@layout/toolbar_common_red"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"/>

    <ScrollView
        android:layout_marginTop="10dp"

        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="上  报  人:"
            android:gravity="right|center_vertical"
            android:textSize="@dimen/TitleTextSize"
            android:textColor="#5e5e5e"
            />
        <EditText
            android:id="@+id/et_title"
            android:layout_marginLeft="5dp"
            android:layout_weight="3"
            android:paddingLeft="5dp"
            android:background="@mipmap/kuang"
            android:layout_marginRight="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="事件类型:"
            android:gravity="right|center_vertical"
            android:textSize="@dimen/TitleTextSize"
            android:textColor="#5e5e5e"
            />
        <Spinner
            android:id="@+id/spinner_type"
            android:layout_marginLeft="5dp"
            android:layout_weight="3"
            android:animationCache="true"
            android:drawSelectorOnTop="true"
            android:background="@null"
            android:layout_marginRight="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="事件内容:"
            android:gravity="right"
            android:textSize="@dimen/TitleTextSize"
            android:textColor="#5e5e5e"
            />
        <EditText
            android:id="@+id/et_content"
            android:paddingLeft="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_width="0dp"
            android:gravity="top"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbars="vertical"
            android:inputType="textMultiLine"
            android:background="@mipmap/neirongkuang"
            android:scrollbarStyle="outsideOverlay"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="现场图片:"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/TitleTextSize"
            android:textColor="#5e5e5e"
            />

        </LinearLayout>
        <GridLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:columnCount="2"
            android:layout_marginBottom="20dp"
            android:layout_weight="3">
            <ImageView
                android:id="@+id/iv01_ereport_add"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/iconfont_jiahao"/>
            <ImageView
                android:id="@+id/iv02_ereport_add"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:scaleType="centerCrop"
                android:layout_marginRight="20dp"
              />
            <ImageView
                android:id="@+id/iv03_ereport_add"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="left"
                android:scaleType="centerCrop"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
              />
            <ImageView
                android:id="@+id/iv04_ereport_add"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="20dp"
              />
        </GridLayout>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
    </LinearLayout>
