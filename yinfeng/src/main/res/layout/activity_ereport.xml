<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@color/main_bg"
    tools:context="com.ctrl.android.property.jason.ui.complaint.MyComplaintActivity">


    <include layout="@layout/toolbar_common_red"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"/>

    <!--<View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/line_gray" />-->
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/white"
        android:id="@+id/linearLayout">


        <!--全部-->
        <TextView
            android:drawablePadding="3dp"
            android:id="@+id/tv_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="全部"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:textColor="@color/text_job_red"
            android:textSize="@dimen/BasicTextSize"
            />
        <View
            android:layout_width="1px"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:background="@color/line_gray" />

        <!--未处理-->
        <TextView
            android:id="@+id/tv_pending"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="未处理"
            android:textColor="@color/text_job_gray"
            android:gravity="center"
            android:textSize="@dimen/BasicTextSize"
            />
        <View
            android:layout_width="1px"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:background="@color/line_gray" />
        <!--处理中-->
        <TextView
            android:id="@+id/tv_processing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="处理中"
            android:textColor="@color/text_job_gray"
            android:gravity="center"
            android:textSize="@dimen/BasicTextSize"
            />
        <View
            android:layout_width="1px"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:background="@color/line_gray" />


        <!--已结束-->
        <TextView
            android:id="@+id/tv_end"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="已结束"
            android:textColor="@color/text_job_gray"
            android:gravity="center"
            android:textSize="@dimen/BasicTextSize"
            />
        />-->
    </LinearLayout>

    <ImageView
        android:id="@+id/cursor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="matrix"
        android:src="@mipmap/line" />



    <!--内容-->
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:flipInterval="400"
        android:persistentDrawingCache="animation"

        />


</LinearLayout>

