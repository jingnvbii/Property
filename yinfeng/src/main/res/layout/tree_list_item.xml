<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/category_1_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/category_1_im"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:src="@mipmap/tongxunlu_right"/>

        <TextView
            android:id="@+id/category_1_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="一级目录"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/category_2_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/category_2_im"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:src="@mipmap/tongxunlu_right"/>

        <TextView
            android:id="@+id/category_2_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="二级目录"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/category_3_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/category_3_im"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:src="@mipmap/hotline_default_head_img"/>

        <TextView
            android:id="@+id/category_3_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="三级目录"/>
        <TextView
            android:id="@+id/grade_3_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text=""/>

        <ImageView
            android:id="@+id/iv_telephone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:src="@mipmap/iconfont_dianhua"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/category_4_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/category_4_im"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:paddingLeft="70dp"
            android:src="@mipmap/tongxunlu_right"/>

        <TextView
            android:id="@+id/category_4_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="四级目录"/>

    </LinearLayout>


</LinearLayout>