<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
     tools:context=".MainActivity">

    <include
        android:id="@+id/title"
        layout="@layout/toolbar_common_red"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        />
   <!-- <ImageView
        android:id="@+id/iv_main"
        android:layout_marginTop="1px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/pic"/>-->
    <com.ctrl.android.yinfeng.customview.SlideShowView
        android:id="@+id/viewpager_advertising"
        android:layout_width="match_parent"
        android:layout_marginTop="1px"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >
    </com.ctrl.android.yinfeng.customview.SlideShowView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

     <TextView
         android:id="@+id/tv_gonggao"
         android:layout_marginLeft="10dp"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:paddingTop="15dp"
         android:drawableTop="@mipmap/gonggao"
         android:layout_marginTop="10dp"
         android:layout_weight="1"
         android:textColor="@color/white"
         android:gravity="center"
         android:textSize="13sp"
         android:background="#01cbd4"
         android:text="社区公告"/>


    <TextView
        android:id="@+id/tv_gongdan"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:textColor="#238FBD"
        android:text="我的工单"
        android:background="@mipmap/banner1"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

     <TextView
         android:id="@+id/tv_xuncha"
         android:layout_marginLeft="10dp"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:paddingTop="15dp"
         android:drawableTop="@mipmap/xuncha"
         android:layout_marginTop="10dp"
         android:layout_weight="1"
         android:textColor="@color/white"
         android:gravity="center"
         android:textSize="13sp"
         android:background="#5AAAE9"
         android:text="巡查"/>


    <TextView
        android:id="@+id/tv_shangbao"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="50dp"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:drawableLeft="@mipmap/shangbao"
        android:layout_height="match_parent"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="事件上报"
        android:background="#EB4930"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

     <TextView
         android:id="@+id/tv_xungeng"
         android:layout_marginLeft="10dp"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:paddingTop="15dp"
         android:drawableTop="@mipmap/xungeng"
         android:layout_marginTop="10dp"
         android:layout_weight="1"
         android:textColor="@color/white"
         android:gravity="center"
         android:textSize="13sp"
         android:background="#1BC266"
         android:text="巡更"/>


    <TextView
        android:id="@+id/tv_fangke"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:paddingLeft="50dp"
        android:layout_height="match_parent"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:drawableLeft="@mipmap/fangke"
        android:text="访客通行"
        android:background="#5D98FE"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_wenda"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textColor="#1ac365"
            android:background="@mipmap/banner2"
            />

        <TextView
            android:id="@+id/tv_tongxun"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:drawableTop="@mipmap/tongxunlu"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="13sp"
            android:background="#F48221"
            android:text="内部通讯录"/>
    </LinearLayout>
</LinearLayout>