<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@drawable/white_bg_shap"
    android:padding="@dimen/activity_padding_small"
    android:orientation="vertical"
    android:gravity="center" >

    <!--成功后弹出-->
    <LinearLayout
        android:id="@+id/alert_layout"
        android:layout_width="@dimen/image_large_width"
        android:layout_height="@dimen/image_large_height"
        android:layout_marginTop="@dimen/activity_padding"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/green_check_big"/>
        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_padding_small"/>

        <TextView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_padding_small"
            android:padding="@dimen/activity_padding_small"
            android:textColor="@color/white"
            android:background="@drawable/orange_bg_shap"/>

    </LinearLayout>

</LinearLayout>