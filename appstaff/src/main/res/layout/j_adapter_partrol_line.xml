<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white">

    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/rl_patrol"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/tv_line01"
            android:layout_width="3px"
            android:layout_gravity="center"
            android:layout_height="10dp"
            android:background="@color/dark_green"
            />

    <ImageView
        android:id="@+id/iv_patrol_disc_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ring_green"
        />
        <TextView
            android:id="@+id/tv_line02"
            android:layout_width="3px"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:background="@color/dark_green"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_patrol_2"
        android:layout_toRightOf="@id/rl_patrol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_point_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_white"
            android:textSize="@dimen/TitleTextSize"
            android:background="@drawable/green_bg_shap"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/tv_describe"
            android:layout_marginTop="5dp"
            android:layout_below="@id/tv_point_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text=""
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_patrol_3"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/rl_patrol"
        android:layout_below="@id/rl_patrol_2"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_marginRight="10dp"
        android:layout_height="80dp"
        android:background="@drawable/green_border">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_patrol_camera"
            android:clickable="true"
            android:layout_gravity="center"
            android:scaleType="center"
            android:layout_width="80dp"
            android:layout_height="85dp"
            android:src="@drawable/camera"
            />
        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/dark_green"
            ></View>
        <EditText
            android:id="@+id/et_patrol_content"
            android:layout_toRightOf="@id/iv_patrol_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="@null"
            android:paddingLeft="5dp"
            android:gravity="top"
            android:lines="3"
            android:hint="备注"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">
    <TextView
        android:id="@+id/tv_patrol_end"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:background="@drawable/green_border"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:clickable="true"
        android:text="完成"/>

    </RelativeLayout>

    </LinearLayout>

</LinearLayout>