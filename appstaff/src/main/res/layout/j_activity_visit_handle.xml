<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical"
    tools:context="com.ctrl.android.property.staff.ui.visit.VisitHandleActivity">

    <include layout="@layout/toolbar_common"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"/>


    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="150dp">

        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_visit_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/visit_but"
            android:text="预约到访"
            android:gravity="center"
            android:textSize="@dimen/LargestTextSize"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:textColor="@color/text_white"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />
        <TextView
            android:id="@+id/tv_visit_proruption"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tv_visit_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/visit_but"
            android:text="突发到访"
            android:textSize="@dimen/LargestTextSize"
            android:textColor="@color/text_white"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
