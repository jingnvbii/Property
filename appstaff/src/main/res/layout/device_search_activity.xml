<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/main_bg"
    android:layout_height="match_parent">

    <!--header-->
    <include
        android:id="@+id/header"
        layout="@layout/toolbar_common"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:layout_below="@+id/header"
        android:id="@+id/basic_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_padding_small"
        android:padding="@dimen/activity_padding_small"
        android:background="@color/white"
        android:orientation="vertical"
        android:gravity="center">

        <!--设备名称-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textColor="@color/text_black"
                android:textSize="@dimen/BasicTextSize"
                android:text="设备名称 : "/>

            <TextView
                android:id="@+id/device_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/text_black"
                android:textSize="@dimen/SmallTextSize"
                android:text="水泵"/>

        </LinearLayout>

        <!--设备位置-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textColor="@color/text_black"
                android:textSize="@dimen/BasicTextSize"
                android:text="设备位置 : "/>

            <TextView
                android:id="@+id/device_locate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/text_black"
                android:textSize="@dimen/SmallTextSize"
                android:text="暖气房"/>

        </LinearLayout>

        <!--购置时间-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textColor="@color/text_black"
                android:textSize="@dimen/BasicTextSize"
                android:text="购置时间 : "/>

            <TextView
                android:id="@+id/device_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/text_black"
                android:textSize="@dimen/SmallTextSize"
                android:text="2015年8月20日"/>

        </LinearLayout>

        <!--养护周期-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textColor="@color/text_black"
                android:textSize="@dimen/BasicTextSize"
                android:text="养护周期 : "/>

            <TextView
                android:id="@+id/device_cycle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/text_black"
                android:textSize="@dimen/SmallTextSize"
                android:text="每周"/>

        </LinearLayout>

        <!--责任人-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textColor="@color/text_black"
                android:textSize="@dimen/BasicTextSize"
                android:text="责任人 : "/>

            <TextView
                android:id="@+id/device_man"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/text_black"
                android:textSize="@dimen/SmallTextSize"
                android:text="工程部"/>

        </LinearLayout>

        <!--维护厂家-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textColor="@color/text_black"
                android:textSize="@dimen/BasicTextSize"
                android:text="维护厂家 : "/>

            <TextView
                android:id="@+id/device_provider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/text_black"
                android:textSize="@dimen/SmallTextSize"
                android:text="山东XXXXXXXX"/>

        </LinearLayout>

        <!--厂家电话-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textColor="@color/text_black"
                android:textSize="@dimen/BasicTextSize"
                android:text="厂家电话 : "/>

            <TextView
                android:id="@+id/device_tel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/text_black"
                android:textSize="@dimen/SmallTextSize"
                android:text="13563215822"/>
            <ImageView
                android:id="@+id/tel_btn"
                android:padding="@dimen/activity_padding_smaller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/green_phone_icon"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_padding_small"
        android:padding="@dimen/activity_padding"
        android:background="@color/white"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <!--搜索范围标题-->
        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textColor="@color/text_black"-->
            <!--android:textSize="@dimen/LargestTextSize"-->
            <!--android:text="查询范围"/>-->

        <!--年份 月份 搜索-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/year_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_padding_small"
                android:paddingLeft="@dimen/activity_padding_small"
                android:drawableRight="@drawable/list_more_icon"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/gray_border_shap"
                android:hint="年份"/>

            <TextView
                android:id="@+id/month_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_padding_small"
                android:layout_marginRight="@dimen/activity_padding_small"
                android:drawableRight="@drawable/list_more_icon"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/gray_border_shap"
                android:hint="月份"/>

            <TextView
                android:id="@+id/search_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_padding"
                android:layout_marginLeft="@dimen/activity_padding"
                android:padding="@dimen/activity_padding_smaller"
                android:background="@drawable/green_bg_shap"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="搜索"/>

        </LinearLayout>

        <!--列表表头-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!--表头-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_padding"
                android:paddingRight="@dimen/activity_padding"
                android:paddingTop="@dimen/activity_padding"
                android:orientation="horizontal">

                <!--缴费时间-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/activity_padding_small"
                    android:gravity="center"
                    android:background="@color/lighter_green"
                    android:textSize="@dimen/LargeTextSize"
                    android:textColor="@color/text_white"
                    android:text="养护时间"/>

                <TextView
                    android:layout_width="@dimen/between_element_margin"
                    android:layout_height="match_parent"
                    android:background="@color/dark_green"/>

                <!--缴费项目-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/activity_padding_small"
                    android:gravity="center"
                    android:background="@color/lighter_green"
                    android:textSize="@dimen/LargeTextSize"
                    android:textColor="@color/text_white"
                    android:text="养护人"/>

                <TextView
                    android:layout_width="@dimen/between_element_margin"
                    android:layout_height="match_parent"
                    android:background="@color/dark_green"/>

                <!--缴费金额-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/activity_padding_small"
                    android:gravity="center"
                    android:background="@color/lighter_green"
                    android:textSize="@dimen/LargeTextSize"
                    android:textColor="@color/text_white"
                    android:text="详细"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/between_element_margin"
                android:layout_marginLeft="@dimen/activity_padding"
                android:layout_marginRight="@dimen/activity_padding"
                android:background="@color/dark_green"/>

            <com.handmark.pulltorefresh.library.PullToRefreshListView
                android:id="@+id/pull_to_refresh_listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_padding"
                android:layout_marginRight="@dimen/activity_padding"
                android:divider="@color/dark_green"
                android:dividerHeight="1dp"
                android:minHeight="500dp"
                android:scrollbars="none">
            </com.handmark.pulltorefresh.library.PullToRefreshListView>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>