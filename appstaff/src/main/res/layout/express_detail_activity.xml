<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">

    <include layout="@layout/toolbar_common"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <!--<ImageView
            android:id="@+id/iv_express_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            />-->
        <LinearLayout
            android:id="@+id/ll_express_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收  件  人 :"
                android:textSize="20sp"
                android:textColor="#999999"/>
            <TextView
                android:id="@+id/tv_express_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="#999999"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_express_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ll_express_name">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收件电话 :"
                android:textSize="20sp"
                android:textColor="#999999"/>
            <TextView
                android:id="@+id/tv_express_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="#999999"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_express_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ll_express_tel">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到访房间 :"
                android:textSize="20sp"
                android:textColor="#999999"/>
            <TextView
                android:id="@+id/tv_express_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="#999999"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_express_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ll_express_room">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快递公司 :"
                android:textSize="20sp"
                android:textColor="#999999"/>
            <TextView
                android:id="@+id/tv_express_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="#999999"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_express_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ll_express_company">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快递编号 :"
                android:textSize="20sp"
                android:textColor="#999999"/>
            <TextView
                android:id="@+id/tv_express_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="#999999"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_express_qrc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ll_express_number">
            <TextView
                android:id="@+id/tv_express_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快递图片 :"
                android:textSize="20sp"
                android:textColor="#999999"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_below="@id/tv_express_image"
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv01_second_hand_transfer"
                    android:layout_marginLeft="10dp"
                    android:adjustViewBounds="true"
                    android:layout_width="0dp"
                    android:scaleType="centerCrop"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/iv02_second_hand_transfer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iconfont_jiahao"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_weight="1"
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/iv03_second_hand_transfer"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/green_add_img_icon"
                    android:layout_width="0dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="invisible"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_below="@id/ll_express_qrc"
            android:layout_marginTop="20dp"
            android:id="@+id/tv_express_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/LargeTextSize"
            android:text=""
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_white"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_below="@id/tv_express_status"
            android:layout_height="20dp"></TextView>
    </RelativeLayout>
</LinearLayout>