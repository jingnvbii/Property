<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/main_bg"
    android:layout_height="match_parent">

    <!--header-->
    <include
        android:id="@+id/header"
        layout="@layout/toolbar_common"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentTop="true"/>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/basic_info_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_padding_small"
                android:paddingLeft="@dimen/activity_padding_small"
                android:paddingRight="@dimen/activity_padding_small"
                android:background="@color/white"
                android:orientation="vertical"
                android:gravity="center">

                <!--第一 layout-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--任务名称-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/activity_padding_smaller"
                            android:textSize="@dimen/TitleTextSize"
                            android:text="任务名称 : "/>

                        <TextView
                            android:id="@+id/task_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:textSize="@dimen/TitleTextSize"
                            android:text=""/>

                    </LinearLayout>

                    <!--下达人-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/activity_padding_smaller"
                            android:textSize="@dimen/TitleTextSize"
                            android:text="下达人 : "/>

                        <TextView
                            android:id="@+id/task_man"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:textSize="@dimen/TitleTextSize"
                            android:text=""/>

                    </LinearLayout>

                    <!--下达时间-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/activity_padding_smaller"
                            android:textSize="@dimen/TitleTextSize"
                            android:text="下达时间 : "/>

                        <TextView
                            android:id="@+id/task_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:textSize="@dimen/TitleTextSize"
                            android:text=""/>

                    </LinearLayout>

                    <!--状态-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/activity_padding_smaller"
                            android:textSize="@dimen/TitleTextSize"
                            android:text="状态 : "/>

                        <TextView
                            android:id="@+id/task_status"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:textSize="@dimen/TitleTextSize"
                            android:text=""/>

                    </LinearLayout>

                    <!--详情-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/activity_padding_smaller"
                            android:textSize="@dimen/TitleTextSize"
                            android:text="详细 : "/>

                        <TextView
                            android:id="@+id/task_detail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:textSize="@dimen/TitleTextSize"
                            android:text=""/>

                    </LinearLayout>

                    <!--详情内容-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/task_detail_content1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/TitleTextSize"
                            android:text="XXXXXXXXXXXXXXXXXXX"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/basic_info_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/activity_padding_small"
                android:paddingLeft="@dimen/activity_padding_small"
                android:paddingRight="@dimen/activity_padding_small"
                android:background="@color/white"
                android:orientation="vertical"
                android:gravity="center">

                <!--第二 layout-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--反馈时间-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/activity_padding_smaller"
                            android:textSize="@dimen/TitleTextSize"
                            android:text="反馈时间 : "/>

                        <TextView
                            android:id="@+id/task_return_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:textSize="@dimen/TitleTextSize"
                            android:text="2015-02-23 00:00:00"/>

                    </LinearLayout>

                    <!--完成情况-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/activity_padding_smaller"
                            android:textSize="@dimen/TitleTextSize"
                            android:text="完成情况 : "/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:textSize="@dimen/TitleTextSize"
                            android:text=""/>

                    </LinearLayout>

                    <!--详情内容-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/task_detail_content2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/TitleTextSize"
                            android:text="XXXXX"/>

                    </LinearLayout>

                    <!--图片-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_01"
                            android:layout_width="@dimen/image_small_height"
                            android:layout_height="@dimen/image_small_height"
                            android:layout_margin="@dimen/activity_padding_small"/>

                        <ImageView
                            android:id="@+id/img_02"
                            android:layout_width="@dimen/image_small_height"
                            android:layout_height="@dimen/image_small_height"
                            android:layout_margin="@dimen/activity_padding_small"
                            android:visibility="invisible"/>

                        <ImageView
                            android:id="@+id/img_03"
                            android:layout_width="@dimen/image_small_height"
                            android:layout_height="@dimen/image_small_height"
                            android:layout_margin="@dimen/activity_padding_small"
                            android:visibility="invisible"/>

                    </LinearLayout>

                    <!--追加任务-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/add_task_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/activity_padding_small"
                            android:padding="@dimen/activity_padding_small"
                            android:background="@drawable/orange_bg_shap"
                            android:gravity="center"
                            android:textSize="@dimen/TitleTextSize"
                            android:textColor="@color/text_white"
                            android:text="追加任务"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/basic_info_layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/activity_padding_small"
                android:paddingLeft="@dimen/activity_padding_small"
                android:paddingRight="@dimen/activity_padding_small"
                android:background="@color/white"
                android:orientation="vertical"
                android:gravity="center">

                <!--第三 layout-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--追加任务-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!--受领人-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/activity_padding_small"
                            android:gravity="center_vertical"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:gravity="right"
                                    android:textColor="@color/text_black"
                                    android:textSize="@dimen/LargeTextSize"
                                    android:text="受领人 : "/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_weight="2">

                                <EditText
                                    android:id="@+id/task_man_text"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:editable="false"
                                    android:layout_weight="3"
                                    android:padding="10dp"
                                    android:background="@drawable/gray_border_shap"
                                    android:singleLine="true"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/LargeTextSize"
                                    android:text=""/>

                                <ImageView
                                    android:id="@+id/add_btn"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:src="@drawable/add_man_icon"/>

                            </LinearLayout>

                        </LinearLayout>

                        <!--任务说明-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/activity_padding_small"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:gravity="right"
                                    android:textColor="@color/text_black"
                                    android:textSize="@dimen/LargeTextSize"
                                    android:text="任务说明 : "/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2">

                                <EditText
                                    android:id="@+id/task_detail_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:minHeight="100dp"
                                    android:padding="@dimen/activity_padding_small"
                                    android:background="@drawable/gray_border_shap"
                                    android:singleLine="true"
                                    android:gravity="left"
                                    android:textSize="@dimen/LargeTextSize"
                                    android:hint="请输入"/>

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/task_submit_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/activity_padding_small"
                            android:padding="@dimen/activity_padding_small"
                            android:background="@drawable/orange_bg_shap"
                            android:gravity="center"
                            android:textSize="@dimen/TitleTextSize"
                            android:textColor="@color/text_white"
                            android:text="提交任务"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>