<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<RelativeLayout
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_house_trading_item"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/pro_pic_01"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/tv01_house_trading_item" />
    <TextView
        android:id="@+id/tv01_house_trading_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_house_trading_item"
        android:text="中世纪学区房"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/LargeTextSize"/>

    <TextView
        android:id="@+id/tv02_house_trading_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_house_trading_item"
        android:layout_below="@id/tv01_house_trading_item"
        android:layout_marginTop="5dp"
        android:text="中世纪学区房"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/BasicTextSize"/>
    <TextView
        android:id="@+id/tv03_house_trading_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_house_trading_item"
        android:layout_below="@id/tv02_house_trading_item"
        android:text="中世纪学区房"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/BasicTextSize"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_house_trading_item"
        android:layout_below="@id/tv03_house_trading_item"
        android:text="查看详情 > >"
        android:textColor="@color/text_yellow"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/LargeTextSize"
        android:id="@+id/tv04_house_trading_item"
        android:layout_marginBottom="10dp"/>



    <TextView
        android:id="@+id/tv05_house_trading_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4545"
        android:textColor="@color/text_green"
        android:layout_alignParentRight="true"
        android:layout_marginTop="45dp"
        android:layout_marginRight="50dp"
        android:textSize="@dimen/LargeTextSize"
        />


</RelativeLayout>
</RelativeLayout>