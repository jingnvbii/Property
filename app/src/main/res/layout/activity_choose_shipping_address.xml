<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ctrl.android.property.jason.ui.JActivity.ChooseShippingAddressActivity"
    android:background="@color/main_bg"
    android:id="@+id/rl_choose_shipping_adress">

    <include layout="@layout/toolbar_common_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:id="@+id/include" />

    <ListView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choose_shipping_adress_listview"
        android:layout_below="@+id/include"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_choose_shipping_adress_add"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您暂时还没有收货地址，点击添加吧！"
        android:textSize="@dimen/LargeTextSize"
        android:drawableTop="@drawable/edit_add"
        android:drawablePadding="20dp"
        android:visibility="gone"
        />


</RelativeLayout>
