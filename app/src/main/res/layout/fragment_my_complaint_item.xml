<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            >
          <TextView
              android:id="@+id/tv_complaint_number"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=""
              android:textSize="@dimen/BasicTextSize"
              />
          <TextView
              android:id="@+id/tv_complaint_type"
              android:layout_marginTop="5dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=""
              android:textSize="@dimen/BasicTextSize"
              />
          <TextView
              android:id="@+id/tv_complaint_room"
              android:layout_marginTop="5dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=""
              android:textSize="@dimen/BasicTextSize"
              />
          <TextView
              android:id="@+id/tv_complaint_time"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="5dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=""
              android:textSize="@dimen/BasicTextSize"
              />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
         <TextView
             android:id="@+id/tv_complaint_status"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:paddingLeft="10dp"
             android:paddingRight="10dp"
             android:background="@drawable/tv_shape_green"
             android:text=""
             android:textColor="@color/white"
             android:textSize="@dimen/BasicTextSize"
             />


    </LinearLayout>

</LinearLayout>
</LinearLayout>