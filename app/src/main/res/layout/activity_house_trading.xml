<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ctrl.android.property.jason.ui.owner.HouseTradingActivity">

    <include layout="@layout/toolbar_common"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:id="@+id/linearLayout">
            <!--出租-->
            <TextView
                android:id="@+id/btn_house_release_rent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="出租"
                android:background="@drawable/button_left_shap_checked"
                android:textColor="@color/text_white"
                android:gravity="center"
                android:textSize="@dimen/LargeTextSize"
                />
            <!--出售-->
            <TextView
                android:id="@+id/btn_house_release_sell"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="出售"
                android:textColor="@color/text_gray"
                android:background="@drawable/button_right_shap"
                android:gravity="center"
                android:textSize="@dimen/LargeTextSize"
                />
        </LinearLayout>

        <!--内容-->
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:flipInterval="400"
            android:persistentDrawingCache="animation"

            />

</LinearLayout>
</LinearLayout>

