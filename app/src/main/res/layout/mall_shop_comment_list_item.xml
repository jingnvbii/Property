<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/main_bg"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_padding_smaller"
        android:padding="@dimen/activity_padding_smaller"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center">

        <!--评价信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--商家信用-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="left">

                <RatingBar
                    android:id="@+id/shop_comment_ratingBar"
                    style="@style/roomRatingBar"
                    android:numStars="5"
                    android:isIndicator="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/shop_comment_send_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/BasicTextSize"
                    android:text=""/>

                <TextView
                    android:id="@+id/shop_comment_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/BasicTextSize"
                    android:text=""/>

            </LinearLayout>

            <!--评论内容-->
            <TextView
                android:id="@+id/shop_comment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="@dimen/BasicTextSize"
                android:text=""/>

            <!--评论时间-->
            <TextView
                android:id="@+id/shop_comment_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/BasicTextSize"
                android:text=""/>




        </LinearLayout>

    </LinearLayout>

</LinearLayout>