<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg"
    tools:context="com.ctrl.android.property.jason.ui.complaint.MyComplaintAddActivity">

    <include layout="@layout/toolbar_common"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"/>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投诉房间："
            android:textSize="@dimen/LargeTextSize"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投诉类型："
            android:textSize="@dimen/LargeTextSize"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投诉内容："
            android:textSize="@dimen/LargeTextSize"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_my_complaint_add_room"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/LargeTextSize"
                />

            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_change"
                android:layout_marginLeft="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更改"
                android:layout_marginRight="20dp"
                android:textSize="@dimen/BasicTextSize"
                android:textColor="@color/text_gray"
                />
        </RelativeLayout>

        <Spinner
            android:layout_marginTop="5dp"
            android:id="@+id/spinner_complaint_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="120dp"
            ></Spinner>

        <EditText
            android:id="@+id/et_my_complaint_add"
            android:layout_marginTop="5dp"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:lines="6"
            android:textSize="@dimen/BasicTextSize"
            android:paddingLeft="5dp"
            android:inputType="textMultiLine"
            android:background="@drawable/edit_shap_gray"/>
    </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="拍照"
        android:textSize="@dimen/LargeTextSize"
        android:paddingLeft="20dp"
        android:background="@color/white"/>

    <LinearLayout
        android:background="@color/white"
        android:layout_below="@id/tv_baobei_image"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv01_my_complaint_add"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:layout_width="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/green_add_img_icon"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv02_my_complaint_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/green_add_img_icon"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/iv03_my_complaint_add"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/green_add_img_icon"
            android:layout_width="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"/>
    </LinearLayout>

</LinearLayout>
