<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_padding_small"
    android:layout_marginTop="@dimen/between_element_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--发表人 时间 等-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/between_element_margin"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/forum_comment_writer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textSize="@dimen/TitleTextSize"
                android:textColor="@color/dark_green"
                android:text=""/>

            <TextView
                android:id="@+id/forum_comment_floor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/activity_padding_smaller"
                android:text=""/>

            <TextView
                android:id="@+id/forum_comment_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:singleLine="true"
                android:layout_weight="2"
                android:text=""/>

        </LinearLayout>

        <!--内容-->
        <TextView
            android:id="@+id/forum_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_padding_small"
            android:background="@color/white"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/BasicTextSize"/>

        <!--评论按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/between_element_margin"
            android:background="@color/white"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/forum_comment_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/forum_detail_comment_icon"/>

        </LinearLayout>
    </LinearLayout>





</LinearLayout>

