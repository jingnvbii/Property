<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_common"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"/>


    <!--主体部分-->
    <LinearLayout
        android:id="@+id/mall_main_pop_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--相符描述-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/activity_padding_small"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:textColor="@color/text_black"
                android:textSize="@dimen/TitleTextSize"
                android:text="相符描述  "/>
            <RatingBar
                android:id="@+id/order_describe_rating"
                style="@style/roomRatingBarBig"
                android:numStars="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!--发货速度-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/activity_padding_small"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:textColor="@color/text_black"
                android:textSize="@dimen/TitleTextSize"
                android:text="发货速度  "/>
            <RatingBar
                android:id="@+id/order_send_rating"
                style="@style/roomRatingBarBig"
                android:numStars="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!--服务态度-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/activity_padding_small"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:textColor="@color/text_black"
                android:textSize="@dimen/TitleTextSize"
                android:text="服务态度  "/>
            <RatingBar
                android:id="@+id/order_service_rating"
                style="@style/roomRatingBarBig"
                android:numStars="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!--评价内容-->
        <EditText
            android:id="@+id/comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_padding"
            android:padding="@dimen/activity_padding_small"
            android:gravity="top"
            android:background="@color/white"
            android:minHeight="200dp"
            android:hint="写下对商品的评价(限100字)"/>

        <TextView
            android:id="@+id/comment_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_padding"
            android:padding="@dimen/activity_padding_small"
            android:gravity="center"
            android:background="@drawable/green_bg_shap"
            android:textSize="@dimen/TitleTextSize"
            android:textColor="@color/text_white"
            android:text="评  价"/>

    </LinearLayout>

</LinearLayout>