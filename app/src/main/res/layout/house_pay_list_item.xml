<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:focusable="true"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:padding="@dimen/activity_padding_small"
    android:layout_marginLeft="@dimen/activity_padding"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/house_pay_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/activity_padding_smaller"
        android:textColor="@color/text_black"
        android:textSize="@dimen/LargeTextSize"
        android:text="水费"/>

    <TextView
        android:id="@+id/house_pay_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/activity_padding_smaller"
        android:textColor="@color/text_black"
        android:textSize="@dimen/LargeTextSize"
        android:text="25.1元"/>

    <TextView
        android:id="@+id/house_pay_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/activity_padding_smaller"
        android:layout_marginLeft="@dimen/activity_padding"
        android:layout_marginRight="@dimen/activity_padding"
        android:textColor="@color/text_white"
        android:textSize="@dimen/LargeTextSize"
        android:background="@drawable/orange_bg_shap"
        android:text="加入交费"/>



</LinearLayout>

