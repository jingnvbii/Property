<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.ctrl.android.property.jason.ui.customctrol.RoundImageView
            android:layout_alignParentLeft="true"
            android:id="@+id/iv_photo"
            android:layout_marginLeft="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/touxiang2x"
           />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/tv_second_hand_item_name"
            android:textSize="@dimen/BasicTextSize"/>
        <TextView
            android:id="@+id/tv_second_hand_item_time"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/SmallerTextSize"
            android:textColor="@color/text_gray"
           />
        <TextView
            android:id="@+id/tv_second_hand_item_location"
            android:layout_toRightOf="@id/iv_photo"
            android:layout_below="@id/tv_second_hand_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/SmallerTextSize"
            android:layout_marginTop="3dp"
            android:textColor="@color/text_gray"/>

        <TextView
            android:id="@+id/tv_second_hand_item_title"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/tv_second_hand_item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/LargeTextSize"/>

        <TextView
            android:id="@+id/tv_second_hand_item_price"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_second_hand_item_location"
            android:text=""
            android:textColor="@color/text_green"
            android:textSize="@dimen/BasicTextSize"
            />
    </RelativeLayout>

    <LinearLayout
        android:paddingBottom="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv01_second_hand"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:scaleType="centerCrop"
            android:layout_height="100dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv02_second_hand"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv03_second_hand"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>