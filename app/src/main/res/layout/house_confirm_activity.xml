<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/mall_main_pop_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/main_bg"
    android:layout_height="match_parent">

    <!--header-->
    <include layout="@layout/toolbar_common"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentTop="true"/>

    <!--户主姓名-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/activity_padding_small"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:textSize="@dimen/LargeTextSize"
            android:textColor="@color/text_black"
            android:text="@string/owner_name"
            android:layout_marginTop="@dimen/activity_padding_small"
            android:paddingBottom="@dimen/activity_padding_small"
            android:paddingRight="@dimen/activity_padding_small"
            android:paddingTop="@dimen/activity_padding_small" />

        <EditText
            android:id="@+id/owner_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_black"
            android:background="@drawable/gray_border_shap"
            android:hint="@string/pls_input"
            android:layout_marginTop="@dimen/activity_padding_small"
            android:textSize="@dimen/LargeTextSize"
            android:padding="@dimen/activity_padding_small"
            android:layout_marginRight="@dimen/activity_padding_small"
            android:textColorHint="@color/text_gray"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:src="@drawable/gray_locate"/>

    </LinearLayout>

    <!--手机号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/activity_padding_small"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:textSize="@dimen/LargeTextSize"
            android:textColor="@color/text_black"
            android:text="@string/mobile_num"
            android:layout_marginTop="@dimen/activity_padding_small"
            android:paddingBottom="@dimen/activity_padding_small"
            android:paddingRight="@dimen/activity_padding_small"
            android:paddingTop="@dimen/activity_padding_small" />

        <EditText
            android:id="@+id/owner_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_black"
            android:background="@drawable/gray_border_shap"
            android:inputType="phone"
            android:hint="@string/pls_input"
            android:layout_marginTop="@dimen/activity_padding_small"
            android:textSize="@dimen/LargeTextSize"
            android:padding="@dimen/activity_padding_small"
            android:layout_marginRight="@dimen/activity_padding_small"
            android:textColorHint="@color/text_gray"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_gravity="center_vertical"
            android:src="@drawable/gray_locate"/>

    </LinearLayout>

    <!--省市区-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/activity_padding_small"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:textSize="@dimen/LargeTextSize"
            android:textColor="@color/text_black"
            android:text="省市区"
            android:layout_marginTop="@dimen/activity_padding_small"
            android:paddingBottom="@dimen/activity_padding_small"
            android:paddingRight="@dimen/activity_padding_small"
            android:paddingTop="@dimen/activity_padding_small" />

        <EditText
            android:id="@+id/owner_P_c_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_black"
            android:background="@drawable/gray_border_shap"
            android:hint="请选择"
            android:editable="false"
            android:layout_marginTop="@dimen/activity_padding_small"
            android:textSize="@dimen/LargeTextSize"
            android:padding="@dimen/activity_padding_small"
            android:layout_marginRight="@dimen/activity_padding_small"
            android:textColorHint="@color/text_gray"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gray_locate_big"/>

        </LinearLayout>

    </LinearLayout>

    <!--小区-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/activity_padding_small"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:textSize="@dimen/LargeTextSize"
            android:textColor="@color/text_black"
            android:text="@string/community"
            android:layout_marginTop="@dimen/activity_padding_small"
            android:paddingBottom="@dimen/activity_padding_small"
            android:paddingRight="@dimen/activity_padding_small"
            android:paddingTop="@dimen/activity_padding_small" />

        <EditText
            android:id="@+id/owner_community"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_black"
            android:background="@drawable/gray_border_shap"
            android:hint="@string/pls_input"
            android:layout_marginTop="@dimen/activity_padding_small"
            android:textSize="@dimen/LargeTextSize"
            android:padding="@dimen/activity_padding_small"
            android:layout_marginRight="@dimen/activity_padding_small"
            android:textColorHint="@color/text_gray"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gray_locate_big"/>

        </LinearLayout>

    </LinearLayout>

    <!--楼栋/弄-->
    <LinearLayout
        android:id="@+id/building_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/activity_padding_small"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/shop_order_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/activity_padding"
            android:layout_marginBottom="@dimen/between_element_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/LargeTextSize"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:textColor="@color/text_black"
                android:text="@string/building_num" />

            <TextView
                android:id="@+id/building"
                android:layout_toLeftOf="@+id/arrow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/LargeTextSize"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_padding"
                android:layout_centerVertical="true"
                android:textColorHint="@color/text_gray"
                android:hint="@string/pls_choose" />

            <ImageView
                android:id="@+id/arrow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/gray_arrow_right_none"/>
        </RelativeLayout>

    </LinearLayout>

    <!--单元/号-->
    <LinearLayout
        android:id="@+id/unit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/between_element_margin"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/aaa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/activity_padding"
            android:layout_marginBottom="@dimen/between_element_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/LargeTextSize"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:textColor="@color/text_black"
                android:text="@string/unit_num" />

            <TextView
                android:id="@+id/unit"
                android:layout_toLeftOf="@+id/arrow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/LargeTextSize"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_padding"
                android:layout_centerVertical="true"
                android:textColorHint="@color/text_gray"
                android:hint="@string/pls_choose"  />

            <ImageView
                android:id="@+id/arrow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/gray_arrow_right_none"/>
        </RelativeLayout>

    </LinearLayout>

    <!--门牌/房号-->
    <LinearLayout
        android:id="@+id/room_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/between_element_margin"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/activity_padding"
            android:layout_marginBottom="@dimen/between_element_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/LargeTextSize"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:textColor="@color/text_black"
                android:text="@string/room_num" />

            <TextView
                android:id="@+id/room"
                android:layout_toLeftOf="@+id/arrow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/LargeTextSize"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_padding"
                android:layout_centerVertical="true"
                android:textColorHint="@color/text_gray"
                android:hint="@string/pls_choose" />

            <ImageView
                android:id="@+id/arrow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/gray_arrow_right_none"/>
        </RelativeLayout>

    </LinearLayout>

    <!--认证按钮-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_padding"
        android:orientation="horizontal">

        <Button
            android:id="@+id/confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_margin="@dimen/activity_padding"
            android:padding="@dimen/activity_padding"
            android:textColor="@color/text_white"
            android:textSize="@dimen/LargeTextSize"
            android:background="@drawable/gray_bg_shap"
            android:text="@string/confirm2"/>

    </LinearLayout>

</LinearLayout>