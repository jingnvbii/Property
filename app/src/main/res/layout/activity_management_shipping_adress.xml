<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ctrl.android.property.jason.ui.JActivity.ChooseShippingAddressActivity"
    android:background="@color/main_bg">

    <include layout="@layout/toolbar_common_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:id="@+id/include" />

    <ListView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choose_shipping_adress_listview"
        android:layout_below="@+id/include"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View style="@style/Divider"
        android:layout_height="1dp"
        android:layout_above="@+id/management_shipping_adress_btn"/>

    <Button
        android:id="@+id/management_shipping_adress_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/search_green_selector"
        android:text="添加新地址"
        android:textColor="@color/white"
        android:textSize="@dimen/LargeTextSize"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:paddingRight="60dp"
        android:paddingLeft="60dp"/>


</RelativeLayout>
