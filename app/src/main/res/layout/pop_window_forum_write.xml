<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="130dp"
    android:layout_height="80dp"
    android:padding="@dimen/activity_padding_smaller"
    android:gravity="center"
    android:background="@drawable/green_bg_pop_top"
    >
    <TextView
        android:id="@+id/popwindow_start_note_btn"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/forum_start_note_icon"
        android:text="@string/start_forum"
        android:textSize="@dimen/BasicTextSize"
        android:textColor="@color/white"/>
    <View
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/line_white_shape"/>
    <TextView
        android:id="@+id/popwindow_start_activity_btn"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/forum_start_activity_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_activity"
        android:textSize="@dimen/BasicTextSize"
        android:textColor="@color/white"/>

</LinearLayout>