
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ctrl.android.property.jason.ui.Fragment.HouseReleaseRentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题 :"
            android:textSize="@dimen/BasicTextSize"
            android:textColor="@color/text_gray"
            android:gravity="center"
            android:layout_marginLeft="50dp"/>

        <EditText
            android:textSize="@dimen/BasicTextSize"
            android:id="@+id/et_title"
            android:paddingLeft="@dimen/edittextpaddingleft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/edit_shap_gray"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小区位置 :"
            android:textSize="@dimen/BasicTextSize"
            android:textColor="@color/text_gray"
            android:gravity="center"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:textSize="@dimen/BasicTextSize"
            android:paddingLeft="@dimen/edittextpaddingleft"
            android:id="@+id/et_community_location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/edit_shap_gray"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="描述 :"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/text_gray"/>
        <EditText
            android:textSize="@dimen/BasicTextSize"
            android:paddingLeft="@dimen/edittextpaddingleft"
            android:layout_alignLeft="@id/tv01"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/edit_shap_gray"
            android:lines="6"
            android:gravity="top"
            android:id="@+id/et_describe"
            />
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系人 :"
            android:textSize="@dimen/BasicTextSize"
            android:textColor="@color/text_gray"
            android:gravity="center"
            android:layout_marginLeft="30dp"/>

        <EditText
            android:textSize="@dimen/BasicTextSize"
            android:id="@+id/et_contact"
            android:paddingLeft="@dimen/edittextpaddingleft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="180dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/edit_shap_gray"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话 :"
            android:textSize="@dimen/BasicTextSize"
            android:textColor="@color/text_gray"
            android:gravity="center"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:textSize="@dimen/BasicTextSize"
            android:id="@+id/et_telephone"
            android:paddingLeft="@dimen/edittextpaddingleft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/edit_shap_gray"
            />
    </LinearLayout>


</LinearLayout>