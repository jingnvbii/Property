<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/main_bg"
    android:layout_height="match_parent">

    <!--header-->
    <include android:id="@+id/header"
        layout="@layout/toolbar_common"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentTop="true"/>

    <!--房屋列表-->
    <ListView
        android:layout_below="@+id/header"
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="@dimen/list_divier"
        android:footerDividersEnabled="true"
        android:layout_marginBottom="52dp"
        android:divider="@null">
    </ListView>

    <LinearLayout
        android:id="@+id/add_house_layout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/add_house_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_padding_small"
            android:padding="@dimen/activity_padding_small"
            android:background="@drawable/gray_dashed_border_shap"
            android:gravity="center"
            android:textSize="@dimen/TitleTextSize"
            android:text="+ 新增认证房屋"/>
    </LinearLayout>




</RelativeLayout>