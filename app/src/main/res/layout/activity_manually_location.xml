<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ctrl.android.property.jason.ui.JActivity.ManuallyLocationActivity"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <include layout="@layout/toolbar_common"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#DCDCDC">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="60dp"
            android:hint="请输入您的送餐地址"
            android:textSize="@dimen/TitleTextSize"
            android:background="@drawable/edit_shap"
            android:paddingLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="搜索"
            android:background="@drawable/search_green_selector"
            android:textSize="@dimen/TitleTextSize"
            android:textColor="@color/white"/>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="60dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/manually_location_imageView"
            android:layout_centerHorizontal="true"
            android:src="@drawable/green_search_icon"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/manually_location_imageView"
            android:layout_centerHorizontal="true"
            android:text="请输入收餐地址"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/TitleTextSize"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
</LinearLayout>
