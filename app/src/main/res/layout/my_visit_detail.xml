<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">

    <!--header-->
    <include
        android:id="@+id/header"
        layout="@layout/toolbar_common"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="vertical">

        <!--到访编号-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到访编号 :"
                android:textSize="@dimen/LargeTextSize"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/visit_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/LargeTextSize"
                android:textStyle="bold"/>
        </LinearLayout>

        <!--拜访房间-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拜访房间 :"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#999999"/>
            <TextView
                android:id="@+id/visit_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#999999"/>
        </LinearLayout>

        <!--到  访  人-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到  访  人 :"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#999999"/>
            <TextView
                android:id="@+id/visit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#999999"/>
        </LinearLayout>

        <!--到访时间-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到访时间 :"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#999999"/>
            <TextView
                android:id="@+id/visit_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#999999"/>
        </LinearLayout>

        <!--到访人数-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到访人数 :"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#999999"/>
            <TextView
                android:id="@+id/visit_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#999999"/>
        </LinearLayout>

        <!--车  牌  号-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车  牌  号 :"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#999999"/>
            <TextView
                android:id="@+id/visit_car_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#999999"/>
        </LinearLayout>

        <!--预计停留时间-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预计停留时间 :"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#999999"/>
            <TextView
                android:id="@+id/visit_stop_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#999999"/>
        </LinearLayout>

        <!--二维码地址-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:id="@+id/visit_qrc"
                android:layout_width="@dimen/image_large_width"
                android:layout_height="@dimen/image_large_height"/>
        </LinearLayout>

        <!--分享-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享至"
                android:textSize="15sp"
                android:textColor="#999999"/>
            <ImageView
                android:id="@+id/visit_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/qq_icon"/>
            <ImageView
                android:id="@+id/visit_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/wx_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_padding_small"
                android:text="复制二维码"
                android:textSize="15sp"
                android:textColor="#999999"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>