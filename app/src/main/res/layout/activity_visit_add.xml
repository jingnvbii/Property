<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">

    <!--header-->
    <include
        android:id="@+id/header"
        layout="@layout/toolbar_common"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="vertical">

        <!--拜访房间-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tv_visit_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拜访房间 :"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="@color/text_black"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/visit_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="中润世纪城 15-5-602"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#686868"
                android:layout_toRightOf="@+id/tv_visit_t"/>
            <TextView
                android:id="@+id/room_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更改"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#999999"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <!--到访人-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tv_visit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到  访  人 :"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#686868"
                android:layout_centerVertical="true"/>
            <EditText
                android:id="@+id/visit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#686868"
                android:background="@drawable/edit_shap"
                android:layout_toRightOf="@+id/tv_visit_name"/>
        </RelativeLayout>

        <!--到访时间-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tv_visit_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到访时间 :"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#686868"
                android:layout_centerVertical="true"/>
            <EditText
                android:id="@+id/visit_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:editable="false"
                android:padding="5dp"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#686868"
                android:background="@drawable/edit_shap"
                android:layout_toRightOf="@+id/tv_visit_time"/>
        </RelativeLayout>

        <!--到访人数-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tv_visit_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到访人数 :"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#686868"
                android:layout_centerVertical="true"/>
            <EditText
                android:id="@+id/visit_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:textSize="@dimen/LargeTextSize"
                android:inputType="number"
                android:textColor="#686868"
                android:background="@drawable/edit_shap"
                android:layout_toRightOf="@+id/tv_visit_count"/>
        </RelativeLayout>

        <!--车牌号-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tv_visit_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车  牌  号 :"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#686868"
                android:layout_centerVertical="true"/>
            <EditText
                android:id="@+id/visit_car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#686868"
                android:background="@drawable/edit_shap"
                android:layout_toRightOf="@+id/tv_visit_car"/>
        </RelativeLayout>

        <!--预计停留时间-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp">
            <TextView
                android:id="@+id/tv_visit_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预计停留时间 :"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#686868"
                android:layout_centerVertical="true"/>
            <EditText
                android:id="@+id/visit_stop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:textSize="@dimen/LargeTextSize"
                android:textColor="#686868"
                android:background="@drawable/edit_shap"
                android:layout_toRightOf="@+id/tv_visit_stop"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>